<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/connect_device"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/help" />
    </RelativeLayout>


    <LinearLayout
        android:background="@drawable/background_add_white"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_40"
            android:text="唤醒门锁确保数字键盘灯亮"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:src="@mipmap/wifi_lock_progress_bg"
                android:layout_margin="@dimen/dp_25"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <com.kaadas.lock.widget.WifiCircleProgress
                android:layout_marginTop="@dimen/dp_7"
                android:id="@+id/circle_progress_bar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                app:antiAlias="@dimen/dp_4"
                app:arcWidth="@dimen/dp_4"
                app:bgArcColor="#D1D1D2"
                app:bgArcWidth="@dimen/dp_4"
                app:hintSize="@dimen/text_size_15"
                app:maxValue="100"
                app:startAngle="148"
                app:sweepAngle="240"
                app:unitColor="#CACACA"
                app:unit="loading..."
                app:unitSize="12sp"
                app:valueColor="#333333"
                app:valueSize="26sp" />

        </RelativeLayout>


        <TextView
            android:gravity="center_horizontal"
            android:text="@string/wifi_lock_add_new_connect_notice1"
            android:textColor="#1F1F1F"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="@dimen/dp_100"
            android:gravity="center_horizontal"
            android:text="自动搜索门锁热点中，请稍等..."
            android:textColor="#8F8F8F"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>