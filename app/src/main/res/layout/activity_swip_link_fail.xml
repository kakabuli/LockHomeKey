<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kaadas.lock.activity.addDevice.singleswitch.SwipLinkFailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/swipch_head"></include>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/swiplinkfail_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:text="@string/set_up_failed">

        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_225"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:background="@drawable/remind_background"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"

                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/one_icon"
                    android:layout_marginLeft="@dimen/dp_23"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/swipch_link_join_network_fail_one"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_24"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_57"
                android:background="#EAE9E9"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#FFF"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/two_icon"
                    android:layout_marginLeft="@dimen/dp_23"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/swipch_link_join_network_fail_two"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_24"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_57"
                android:background="#EAE9E9"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#FFF"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/three_icon"
                    android:layout_marginLeft="@dimen/dp_23"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/swipch_link_join_network_fail_two"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_24"
                    />
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="150dp">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
     <Button
         android:id="@+id/btn_next"
         android:layout_width="210dp"
         android:layout_height="wrap_content"
         android:background="@drawable/register_button_shape"
         android:textColor="#ffffff"
         android:layout_gravity="center_horizontal"
         android:text="@string/swipch_link_join_network_fail_btn"></Button>

     <TextView
         android:id="@+id/btn_cancel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/btn_next"
         android:text="@string/cancel"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:autoLink="all"

         ></TextView>

 </LinearLayout>



    </RelativeLayout>


</LinearLayout>
