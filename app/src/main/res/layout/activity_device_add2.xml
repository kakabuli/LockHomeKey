<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/device_background_light"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_device"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/scan_scan" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="添加智能锁"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/k20v_lock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/background_add_white">

                    <ImageView
                        android:id="@+id/iv_k20v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/add_device_k20v" />

                    <TextView
                        android:layout_below="@+id/iv_k20v"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/k20v_lock"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/k11f_lock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:background="@drawable/background_add_white">

                    <ImageView
                        android:id="@+id/iv_k11f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/add_device_k11face" />

                    <TextView
                        android:layout_below="@+id/iv_k11f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/k11f_lock"
                        android:textColor="#333333"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/_3d_lock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="horizontal"
                    android:background="@drawable/background_add_white">

                    <ImageView
                        android:id="@+id/iv_3d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/add_device_3d" />

                    <TextView
                        android:layout_below="@+id/iv_3d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_3d_lock"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_28"
                android:text="选择智能锁类型"
                android:textColor="#666666"
                android:textSize="@dimen/sp_15" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_87"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/video_lock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/background_add_white">

                <ImageView
                    android:id="@+id/iv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:src="@mipmap/add_device__video" />

                <TextView
                    android:layout_below="@+id/iv_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_lock"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/face_lock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_9"
                android:orientation="horizontal"
                android:background="@drawable/background_add_white">

                <ImageView
                    android:id="@+id/iv_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_16"
                    android:src="@mipmap/add_device__face" />

                <TextView
                    android:layout_below="@+id/iv_face"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/face_lock"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_87"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:orientation="horizontal">



                <RelativeLayout
                    android:id="@+id/wifi_lock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/background_add_white">


                        <ImageView
                            android:id="@+id/iv_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@mipmap/add_device__wifi" />

                        <TextView
                            android:layout_below="@+id/iv_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:text="@string/wifi_lock2"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/ble_lock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:orientation="horizontal"
                    android:background="@drawable/background_add_white">


                    <ImageView
                        android:id="@+id/iv_ble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_16"
                        android:src="@mipmap/add_device__ble" />

                    <TextView
                        android:layout_below="@+id/iv_ble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ble_lock"
                        android:textColor="#333333"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/zigbee_lock"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/background_add_white">


                        <ImageView
                            android:id="@+id/iv_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@mipmap/add_device__zigbee" />

                        <TextView
                            android:layout_below="@id/iv_lock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_centerHorizontal="true"
                            android:text="@string/zigbee_lock"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_12" />

                </RelativeLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_32"
                android:text="@string/other_device"
                android:textColor="#666666"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                >

                <LinearLayout
                    android:id="@+id/cat_eye"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/background_add_white"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:src="@mipmap/add_device_cat_eye" />

                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:text="@string/cateye2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gw6032"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/background_add_white"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_device_gw6030" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="GW6032"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gw6010"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:background="@drawable/background_add_white"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_7"
                        android:src="@mipmap/add_device_gw6010" />

                    <TextView
                        android:textSize="@dimen/sp_11"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/dp_12"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="GW6010" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/rg4300"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_device_rg4300" />

                    <TextView
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="RG4300" />
                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/single_switch"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_device_single_switch" />

                    <TextView
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="@string/single_switch" />
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/double_switch"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/add_device_double_switch" />

                    <TextView android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center"
                        android:text="@string/double_switch" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>