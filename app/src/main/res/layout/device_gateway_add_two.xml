<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_gateway"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/being_connect_gateway"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_69"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="@dimen/sp_15"
        android:text="@string/select_add_wifi_info"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_24"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_61"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/remind_background"
        >
        <ImageView
            android:id="@+id/my_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:src="@mipmap/my_icon"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/input_wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/add_kaadaswifi"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/dp_23"
            android:background="@null"
            android:layout_toRightOf="@+id/my_icon"
            android:layout_centerVertical="true"
            android:maxLength="12"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/right"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/remind_background"
        >
        <ImageView
            android:id="@+id/password_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:src="@mipmap/password_icon"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/input_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="@string/input_wifi_passwrod"
            android:textSize="@dimen/sp_15"
            android:textColor="#999999"
            android:layout_marginLeft="@dimen/dp_23"
            android:background="@null"
            android:layout_toRightOf="@+id/password_icon"
            android:layout_centerVertical="true"
            android:maxLength="12"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@mipmap/passwrod_open"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/go_bind"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:layout_centerHorizontal="true"
            android:text="@string/go_bind"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_48"
            android:background="@drawable/go_and_buy"
            />
        
    </RelativeLayout>
</LinearLayout>