<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="#F8F8F8"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:src="@mipmap/back_gray"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/stress_warn"
                android:textSize="@dimen/sp_17"
                android:textColor="#000000"
                android:textStyle="bold"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/retangle_fff_4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/pwd_manager_syn"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_synchronized_record"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_19"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/retangle_stroke_1f96f7_10"
                android:gravity="center"
                android:text="@string/synchroniztion"
                android:textColor="#1F96F7"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_104">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/bluetooth_password_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_66"
                android:text="@string/stress_password"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:id="@+id/ll_add_password"
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/retangle_fff_22"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:text="@string/add_password"
                    android:textColor="#1F96F7"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:src="@mipmap/user_management_add_icon" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_has_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:visibility="visible">


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleview_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/tv_no_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/no_password"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_20"
                />
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_30"
            android:background="#EAE9E9"></View>

        <RelativeLayout
            android:id="@+id/rl_app_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/app_notification"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/iv_app_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@mipmap/iv_open" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>