<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:orientation="vertical">

        <include layout="@layout/head"></include>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_104">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/bluetooth_password_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_66"
                android:text="@string/stress_password"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:id="@+id/ll_add_password"
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/retangle_fff_22"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:text="@string/add_password"
                    android:textColor="#1F96F7"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:src="@mipmap/user_management_add_icon" />
            </LinearLayout>
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_30"
            android:background="#EAE9E9"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_104">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/fingerprint_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_66"
                android:text="@string/stress_fingerprint"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <LinearLayout
                android:id="@+id/ll_add_fingerprint"
                android:layout_width="@dimen/dp_170"
                android:layout_height="@dimen/dp_44"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/retangle_fff_22"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:text="@string/add_fingerprint"
                    android:textColor="#1F96F7"
                    android:textSize="@dimen/sp_15" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_29"
                    android:src="@mipmap/user_management_add_icon" />
            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleview_fingerprint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_30"
            android:background="#EAE9E9"></View>

        <RelativeLayout
            android:id="@+id/rl_app_notification"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/app_notification"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:id="@+id/iv_app_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@mipmap/iv_open" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>