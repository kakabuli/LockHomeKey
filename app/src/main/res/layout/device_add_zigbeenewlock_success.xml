<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_105"
        android:src="@mipmap/cat_eye_suit_success"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/remind_background"
        android:layout_marginTop="@dimen/dp_113"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/remind"
            android:layout_marginLeft="@dimen/dp_23"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_lock_connect_success"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_17"
            android:lineSpacingExtra="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_24"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/button_next"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/go_and_buy"
            android:layout_centerHorizontal="true"
            android:text="@string/finish"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_15"
            android:layout_marginBottom="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>
</LinearLayout>