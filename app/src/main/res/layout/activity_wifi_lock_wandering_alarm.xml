<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/wandering_alarm"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@id/title"
        android:id="@+id/rl_wandering_alarm"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/wandering_alarm"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="开启后，可视摄像头会侦测门外徘徊人员，比较耗电"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>




        <ImageView
            android:id="@+id/iv_wandering_alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/wandering_alarm_selector" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9"></View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_wandering_alarm"
        android:id="@+id/rl_wandering_pir_sensitivity"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/rl_wandering_pir_sensitivity_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/tv_wandering_pir_sensitivity_right"
            android:layout_toLeftOf="@id/rl_wandering_pir_sensitivity_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:text="低"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wandering_pir_sensitivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/wandering_pir_sensitivity"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_wandering_pir_sensitivity"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/wandering_pir_sensitivity_text"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_wandering_pir_sensitivity"
        android:id="@+id/rl_wandering_judge_time"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/rl_wandering_judge_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/tv_wandering_judge_time_right"
            android:layout_toLeftOf="@id/rl_wandering_judge_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:text="15秒"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wandering_judge_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/wandering_judge_time"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_wandering_judge_time"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/wandering_judge_time_text"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>
    </RelativeLayout>

    <com.kaadas.lock.widget.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_150" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="请稍等"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:layout_below="@id/avi"/>

</RelativeLayout>