<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/view_1"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_10"
        android:visibility="gone"/>
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_132"
    android:background="#FFFFFF"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    >
    <LinearLayout
        android:id="@+id/device"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/device_image"
            android:layout_width="@dimen/dp_46"
            android:layout_height="@dimen/dp_82"
            android:layout_centerVertical="true"
            android:src="@mipmap/default_zigbee_lock_icon"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/device"
        android:orientation="vertical">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/lockNickName"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_20"
            />

        <LinearLayout
            android:id="@+id/power_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <com.kaadas.lock.utils.BatteryView
                android:id="@+id/horizontalBatteryView"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_12"
                app:batteryPower="60"
                app:batteryColor="#25F290"
                app:batteryOrientation="horizontal"
                android:background="#FFF"
                android:layout_marginTop="@dimen/dp_8"
                />
            


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_5"
                android:text="@string/device_power"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/device_power_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginTop="@dimen/dp_5"
                android:text="100%"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/device_type_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:src="@mipmap/bluetooth_disconnenction" />
            <TextView
                android:id="@+id/device_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_18"
                android:text="未找到设备"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/right"
        android:layout_marginRight="@dimen/dp_12"
        />
</RelativeLayout>
</LinearLayout>