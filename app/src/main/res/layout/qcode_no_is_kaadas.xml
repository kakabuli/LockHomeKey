<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_gateway"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_66"
        android:src="@mipmap/be_beging_connect_suit_cateye"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_scan"
        android:textColor="#999999"
        android:textSize="@dimen/sp_15"
        android:lineSpacingExtra="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_14"
        android:gravity="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_47"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/remind_background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/one_icon"
                android:layout_marginLeft="@dimen/dp_23"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/the_gateway_have_bind"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_57"
            android:background="#EAE9E9"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/two_icon"
                android:layout_marginLeft="@dimen/dp_23"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/device_gateway_first_text"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_57"
            android:background="#EAE9E9"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFF"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/three_icon"
                android:layout_marginLeft="@dimen/dp_23"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_phone_nework"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        >
        <Button
            android:id="@+id/rescan"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/go_and_buy"
            android:layout_centerHorizontal="true"
            android:text="@string/rescan"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_41"
            />

        <Button
            android:id="@+id/scan_cancel"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/button_next"
            android:layout_centerHorizontal="true"
            android:text="@string/cancel_scan"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_15"
            android:layout_below="@+id/rescan"
            android:layout_marginTop="@dimen/dp_20"
            />
    </RelativeLayout>
</LinearLayout>