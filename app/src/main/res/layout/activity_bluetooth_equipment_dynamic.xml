<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/head"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/retangle_fff_22"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_open_lock_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/retangle_1f96f7_22"
            android:gravity="center"
            android:text="@string/open_lock_record"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_visitor_record"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#1F96F7"
            android:gravity="center"
            android:text="@string/vistor_record"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_warn_information"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/warn_information"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!--<FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />-->
</LinearLayout>