<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_success"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_34"
            android:src="@mipmap/lock" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/bluetooth_add_success"
            android:textColor="#ff999999"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/remind_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@mipmap/my_icon"

                />

            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@null"
                android:ellipsize="end"
                android:hint="@string/add_success_hint"
                android:maxLength="50"
                android:paddingRight="@dimen/dp_15"
                android:singleLine="true"
                android:textColor="#ffb1b1b1"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/remind_background"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/my_icon"

            />

        <EditText
            android:id="@+id/et_position"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:background="@null"
            android:ellipsize="end"
            android:hint="手动输入或从下面已有名称选择"
            android:maxLength="50"
            android:paddingRight="@dimen/dp_15"
            android:singleLine="true"
            android:textColor="#ffb1b1b1"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_weight="1"
        android:id="@+id/rv_position"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_12" />


    <Button
        android:layout_gravity="center"
        android:id="@+id/save"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_48"
        android:background="@drawable/go_and_buy"
        android:text="@string/save"
        android:textColor="#ffffffff"
        android:textSize="@dimen/dp_15" />


</LinearLayout>