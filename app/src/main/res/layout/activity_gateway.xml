<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_255"
        android:background="@drawable/background_gradient_large_small"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            >
            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:src="@mipmap/return_icon"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/gateway"
                android:textSize="@dimen/sp_17"
                android:textColor="#fff"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:src="@mipmap/see_more_white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:visibility="invisible"
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:src="@mipmap/share"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <ImageView
            android:id="@+id/gateway_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_36"
            android:src="@mipmap/gateway6010" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_gateway_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/gateway_online"
                android:drawablePadding="@dimen/dp_5"
                android:text="@string/online"
                android:textColor="#068AEC"
                android:textSize="@dimen/sp_12"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/gateway_nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="壮壮家的网关"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"

                />

            <TextView
                android:id="@+id/unbindGateway"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="解绑网关"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                android:layout_marginRight="@dimen/dp_60"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/testunbindGateway"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="测试"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"
                android:visibility="gone"
                />


        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/con_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/connect_device"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_below="@+id/con_device"

            >
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/no_device_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/no_device_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/gateway_below_no_device"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no_linkage_device"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_16"

                />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>