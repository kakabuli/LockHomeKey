<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/faq_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_weight="1"
            android:text="按了门锁的“重置”按钮，恢复出厂设置后无法使用1111？"
            android:id="@+id/faq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13" />

        <ImageView
            android:id="@+id/faq_folding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_17"
            android:src="@mipmap/right" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/faq_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_24"
            android:background="@drawable/shape_f2f2f2_5"
            android:lineSpacingExtra="@dimen/dp_10"
            android:padding="@dimen/dp_17"
            android:text="jfifjjf"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_17"
        android:background="#EAE9E9"></View>
</LinearLayout>