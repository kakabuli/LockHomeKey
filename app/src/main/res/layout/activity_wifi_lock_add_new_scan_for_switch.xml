<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/swipch_link_join_network_two_title_text"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <TextView
        android:lineSpacingExtra="@dimen/dp_4"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_60"
        android:textStyle="bold"
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widi_lock_add_new_notice1"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17"
        />
    <ImageView
        android:layout_marginTop="36dp"
        android:id="@+id/iv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wifi_lock_add_wake_anim"/>

    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/button_next"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/go_and_buy"
        android:gravity="center"
        android:text="已唤醒门锁"
        android:textColor="#fff"
        android:textSize="@dimen/sp_15" />



</LinearLayout>