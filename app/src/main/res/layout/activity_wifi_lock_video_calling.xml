<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">






    <RelativeLayout
        android:id="@+id/rl_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="#F8F8F8">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:src="@mipmap/back_gray" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:src="@mipmap/video_setting" />

            <TextView
                android:id="@+id/head_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/real_time_video_function"
                android:textColor="#000000"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

        </RelativeLayout>
        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_bar" />

        <ImageView
            android:id="@+id/iv_temporary_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lly_bottom_bar"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_49"
            android:layout_marginRight="@dimen/dp_19"
            android:src="@drawable/real_time_video_pwd_selector" />


        <LinearLayout
            android:id="@+id/lly_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_87"
            android:layout_alignParentBottom="true"
            android:background="#90232323"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_13"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_screenshot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/real_time_video_screenshot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="截图"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_43"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_mute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/real_time_video_mute_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="静音"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_calling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_34"
                android:src="@drawable/real_time_video_calling_selector" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_34"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_recoring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/real_time_video_record_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="录屏"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_34"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/real_time_video_album" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="相册"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lly_temporary_password"
            android:layout_width="@dimen/dp_255"
            android:layout_height="@dimen/dp_50"
            android:layout_above="@id/lly_bottom_bar"
            android:layout_marginBottom="@dimen/dp_49"
            android:background="@drawable/temporary_password_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_8"
                android:text="注：远程临时密码30分钟有效"
                android:textColor="#505050" />

            <TextView
                android:id="@+id/tv_temporary_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:letterSpacing="0.5"
                android:text="12345678123"
                android:textColor="#333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

        </LinearLayout>





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lly_bottom_bar"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_13"
            android:text="@string/wifi_lock_temp_password"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:id="@+id/lly_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_below="@id/title_bar">

            <ImageView
                android:id="@+id/iv_record_spot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/spot_bg"
                android:layout_marginLeft="@dimen/dp_23"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_record_spot"
                android:textColor="#FFF"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:text="REC"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_17" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_mark_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/call_mask" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_head_pic"
            android:layout_marginLeft="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toRightOf="@id/iv_head_pic"
            android:text="壮壮家门锁"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/sp_17"
            android:text="视频连接中..."
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_15" />
        <View
            android:id="@+id/view"
            android:layout_centerHorizontal="true"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/dp_170"
            android:layout_below="@id/iv_head_pic"
            />


        <ImageView
            android:id="@+id/iv_answer_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view"
            android:layout_marginRight="@dimen/dp_78"
            android:layout_marginTop="@dimen/dp_155"
            android:src="@mipmap/answer_icon" />

        <ImageView
            android:id="@+id/iv_refuse_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/view"
            android:layout_marginTop="@dimen/dp_155"
            android:layout_marginLeft="@dimen/dp_78"
            android:src="@mipmap/refuse_icon" />

        <TextView
            android:id="@+id/tv_refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_94"
            android:text="@string/cancel"
            android:textColor="#ffffff"
            android:layout_below="@id/iv_refuse_icon"
            android:layout_marginTop="@dimen/dp_32"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/tv_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_94"
            android:text="接听"
            android:layout_below="@id/iv_answer_icon"
            android:layout_marginTop="@dimen/dp_32"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_11" />

        <com.kaadas.lock.widget.AVLoadingIndicatorView
            android:id="@+id/avi"
            style="@style/AVLoadingIndicatorView.Large"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_below="@id/iv_head_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_150" />


        <com.kaadas.lock.widget.CircleImageView
            android:id="@+id/iv_head_pic"
            android:layout_width="@dimen/dp_63"
            android:layout_height="@dimen/dp_63"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_51"
            android:src="@mipmap/default_head" />

    </RelativeLayout>
</RelativeLayout>