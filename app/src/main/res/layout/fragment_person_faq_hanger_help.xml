<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:paddingHorizontal="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_add_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="按了遥控器灯亮，但是机器没有反应怎么办？"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wifi_video_lock_help_selector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_27"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_1"
                    android:lineSpacingExtra="5dp"
                    android:textColor="#333333"
                    android:text="同时按住“停止键”和“童锁键”3秒，听到晾衣机短响一声后即可恢复。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/background_clothes_hanger_f2f2f2"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:visibility="gone"
                    />

            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_add_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="衣杆不上不下怎么办？"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wifi_video_lock_help_selector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_27"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_2"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/background_clothes_hanger_f2f2f2"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:lineSpacingExtra="5dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:text="① 确认衣杆是否安装完整，安装完整即可正常使用； \n② 衣杆下降或上升过程中是否遇到障碍物，移开障碍物即可恢复使用。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />


            </LinearLayout>


            <LinearLayout
                android:paddingHorizontal="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_add_white"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rl_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="晾衣机指示常亮红灯是怎么回事？"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_13" />

                    <ImageView
                        android:id="@+id/iv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wifi_video_lock_help_selector"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_27"
                        />
                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_3"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/background_clothes_hanger_f2f2f2"
                    android:lineSpacingExtra="5dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:text="配网失败或超时未配网，正常配网成功后会变为绿色常亮3分钟，如不操作，红灯也会在3分钟后熄灭。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:visibility="gone"
                    />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
