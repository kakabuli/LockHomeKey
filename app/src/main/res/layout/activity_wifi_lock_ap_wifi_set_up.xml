<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2f2f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/input_family_wifi"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/help" />

    </RelativeLayout>

    <TextView
        android:lineSpacingExtra="@dimen/dp_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:text="@string/notice_lock_wifi"
        android:textColor="#565656"
        android:textSize="18sp" />

    <TextView
        android:layout_marginBottom="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:text="@string/notice"
        android:textColor="#606060"
        android:textSize="13sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_white_10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_marginTop="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_10"
                android:src="@mipmap/add_wifi_lock_wifi" />

            <com.kaadas.lock.widget.DropEditText
                android:id="@+id/ap_ssid_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text_line_ffdcdcdc"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="end"
                android:hint="@string/fjdskj"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#959595"
                android:textSize="14sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40">


            <EditText
                android:paddingRight="32dp"
                android:id="@+id/ap_password_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text_line_ffdcdcdc"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:drawableLeft="@mipmap/add_wifi_lock_pwd"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="end"
                android:hint="@string/please_input_wifi_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#959595"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:src="@mipmap/eye_close_has_color" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/noly_support_24G"
        android:textColor="#606060"
        android:textSize="11sp" />



    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_68"
        android:background="@drawable/go_and_buy"
        android:text="@string/next_step"
        android:textColor="#fff"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/tv_support_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/edit_text_line_209afd"
        android:gravity="center"
        android:text="@string/look_wifi_support_rout"
        android:textColor="#1F96F7"
        android:textSize="12sp" />

</LinearLayout>