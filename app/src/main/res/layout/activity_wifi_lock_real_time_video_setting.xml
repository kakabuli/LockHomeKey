<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/real_time_video"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/title"
        android:id="@+id/rl_video_connect_open"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#FFFFFF"
        android:paddingTop="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_real_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/real_time_video_setting"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:textSize="@dimen/sp_10"
            android:layout_below="@+id/tv_real_time_title"
            android:layout_marginTop="@dimen/dp_4"
            android:text="@string/real_time_video_setting_detail"/>


        <ImageView
            android:id="@+id/iv_video_connect_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/wandering_alarm_selector" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/rl_video_connect_open"
        android:id="@+id/rl_real_time_period"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#FFFFFF"
        android:paddingTop="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_real_time_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/real_time_video_setting_period"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:textSize="@dimen/sp_10"
            android:layout_below="@+id/tv_real_time_title1"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/real_time_video_setting_period_detail"/>

        <ImageView
            android:id="@+id/iv_real_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_4"
            android:src="@mipmap/right" />

        <TextView
            android:id="@+id/tv_period_connect"
            android:layout_toLeftOf="@id/iv_real_time_right"
            android:layout_toRightOf="@id/tv_real_time_title1"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12"
            android:text=""
            android:maxLines="1"
            />

    </RelativeLayout>

    <com.kaadas.lock.widget.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_150"
        app:indicatorColor="#333333"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="请稍等"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:layout_below="@id/avi"/>

</RelativeLayout>