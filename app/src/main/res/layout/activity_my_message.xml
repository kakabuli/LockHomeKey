<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include
        android:id="@+id/in_head"
        layout="@layout/head"></include>
    <!--无消息-->
    <RelativeLayout
        android:id="@+id/rl_no_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F2F2"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_79"
                android:src="@mipmap/no_message_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_34"
                android:text="@string/no_message"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>
    </RelativeLayout>
    <!--有消息-->
    <LinearLayout
        android:id="@+id/ll_has_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.kaadas.lock.widget.SlideRecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.kaadas.lock.widget.SlideRecyclerView>
    </LinearLayout>

</LinearLayout>