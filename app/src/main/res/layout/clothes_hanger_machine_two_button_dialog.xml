<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_bj"
    >

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#000000"
        android:textSize="@dimen/sp_15"
        android:text="请选择风干时间"
        android:lineSpacingExtra="@dimen/dp_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"/>
        <TextView
            android:id="@+id/tv_time_short"
            android:layout_width="@dimen/dp_104"
            android:layout_height="@dimen/dp_32"
            android:gravity="center"
            android:text="120min"
            android:textSize="@dimen/sp_15"
            android:textColor="#ffffff"
            android:background="@drawable/clothes_hanger_background_selector"/>

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"/>

        <TextView
            android:id="@+id/tv_time_long"
            android:layout_width="@dimen/dp_104"
            android:layout_height="@dimen/dp_32"
            android:gravity="center"
            android:text="240min"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:background="@drawable/clothes_hanger_background_selector"
            />

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_1"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/dialog_line"
        android:layout_marginTop="@dimen/dp_30"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        >
        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_15"
            android:text="@string/cancel"
            android:gravity="center"
            android:textColor="#A3A3A3"
            />
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/dialog_line"
            />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_15"
            android:textColor="#1F96F7"
            android:text="@string/query"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>