<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_f7f7f7_13"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:src="@mipmap/open_validation_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:gravity="center"
        android:text="@string/kaadas_touch_id"
        android:textColor="#000000"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:gravity="center"
        android:text="@string/home_verify_telephone_fingerprint"
        android:textColor="#999999"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/dialog_line" />

    <TextView
        android:id="@+id/finger_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#1F96F7"
        android:textSize="@dimen/sp_15" />
</LinearLayout>