<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kaadas.lock.activity.cateye.PreviewActivity">

    <include
        android:id="@+id/preview_header"
        layout="@layout/head"></include>



    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/preview_loading_download_rl"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        >


        <ProgressBar
            android:id="@+id/history_loading_download_pb"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="#FF4081"
            />

        <TextView
            android:id="@+id/loading_download_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/img_loading1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            />


    </RelativeLayout>


    <com.bm.library.PhotoView
        android:id="@+id/preview_img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:layout_below="@id/preview_header"
        android:scaleType="fitXY"
        />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/preview_img"
        android:background="@drawable/pre_button_shape"
        android:gravity="center"
        android:text="@string/pre_search_video"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_15"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"/>

    <!--<TextView
        android:id="@+id/preview_look_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:text="@string/watch_video"
        android:visibility="gone"
        android:clickable="true"/>-->

    <TextView
        android:id="@+id/preview_reload_download_tv"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="@string/reload_download" />

</RelativeLayout>
