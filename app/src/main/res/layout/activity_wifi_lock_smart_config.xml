<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.kaadas.lock.activity.device.wifilock.add.WifiLockSmartConfigActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_connect"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/help" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_36"
        android:lineSpacingExtra="@dimen/dp_8"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:text="@string/connect_device_notice1"
        android:textColor="#1F1F1F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/iv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/device_connect_anim"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <CheckBox
                android:id="@+id/cb_send_wifi_account_password"
                android:visibility="invisible"
                android:background="@null"
                android:button="@mipmap/shi_xiao_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#333333"
                android:text="@string/send_wifi_account_password"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <CheckBox
                android:id="@+id/cb_success"
                android:visibility="invisible"
                android:background="@null"
                android:button="@mipmap/shi_xiao_selected"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="#333333"
                android:text="@string/set_up_success2"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


    <EditText
        android:id="@+id/tv_support_list"
        android:layout_marginBottom="@dimen/dp_50"
        android:editable="false"
        android:padding="@dimen/dp_5"
        android:background="@drawable/edit_text_line_1f967f"
        android:layout_marginLeft="@dimen/dp_10"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="13sp"
        android:text="@string/look_wifi_support"
        android:textColor="#1F96F7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
