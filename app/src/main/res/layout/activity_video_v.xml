<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:src="@mipmap/iv_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="装装甲的猫眼"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_17"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_50"
            android:textStyle="bold" />
    </RelativeLayout>


    <!-- 视频 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/video_color">

            <SurfaceView
                android:id="@+id/video_preview"
                android:layout_width="120dp"
                android:layout_height="145dp"
                android:visibility="gone" />

            <!-- 视频播放页面 -->
            <org.linphone.mediastream.video.display.GL2JNIView
                android:id="@+id/video_v_surfaceview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" />


            <ImageView
                android:id="@+id/video_v_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/video_full_screen" />


            <TextView
                android:id="@+id/video_play_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/video_start_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/startplay" />

            <TextView
                android:id="@+id/video_connecting_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/video_connecting"
                android:textColor="@color/white"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/video_hang_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@mipmap/video_hang_up"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/ll_lossrate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/video_preview"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_videolossrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/green"></TextView>

                <TextView
                    android:id="@+id/tv_audiolossrate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/green"></TextView>

                <TextView
                    android:id="@+id/tv_framerate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/green"></TextView>
            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_video_control2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="#22232323"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_screen_shot2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@mipmap/video_screenshot"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="@string/screenshot_name"
                android:textColor="#fff" />

            <CheckBox
                android:id="@+id/cb_mute2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/cb_mute"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="@string/mute_name"
                android:textColor="#fff" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_hangup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/hangup"
                    android:gravity="center" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_hands_free2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/cb_voice"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="@string/novoice"
                android:textColor="#fff" />

            <CheckBox
                android:id="@+id/cb_screen_record2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@null"
                android:drawableTop="@drawable/cb_recording"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="录屏2"
                android:textColor="#fff"
                android:tag="hengping"
                />


        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_video_control1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#232323"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_screen_shot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@mipmap/video_screenshot"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="@string/screenshot_name"
            android:textColor="#fff" />

        <CheckBox
            android:id="@+id/cb_mute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/cb_mute"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="@string/mute_name"
            android:textColor="#fff" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_hangup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/hangup"
                android:gravity="center" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_hands_free"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/cb_voice"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="@string/novoice"
            android:textColor="#fff" />

        <CheckBox
            android:id="@+id/cb_screen_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/cb_recording"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text="@string/recording_name"
            android:textColor="#fff"
            android:tag="shuping"/>
    </LinearLayout>


    <!-- 锁 -->
    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/cat_eye_offline"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/cat_eye_offline_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:textColor="#999999"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:text="@string/cat_eye_offfline_please_check_net"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/cat_eye_online"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.yarolegovich.discretescrollview.DiscreteScrollView
                android:id="@+id/forecast_city_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="visible"
                />



            <LinearLayout
                android:id="@+id/video_h_no_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/video_cateye_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/lock_no" />

                <TextView
                    android:id="@+id/video_cateye_noinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_11"
                    android:drawablePadding="@dimen/dp_9"
                    android:gravity="center"
                    android:text="@string/select_no_lock"
                    android:textColor="#ABABAB" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
