<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kaadas.lock.activity.cateye.VideoHActivity">

    <include
        android:id="@+id/preview_header"
        layout="@layout/head" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 视频 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/video_color">

                <SurfaceView
                    android:id="@+id/video_preview"
                    android:layout_width="120dp"
                    android:layout_height="145dp"
                    android:visibility="gone" />

                <!-- 视频播放页面 -->
                <org.linphone.mediastream.video.display.GL2JNIView
                    android:id="@+id/video_v_surfaceview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/video_v_full"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/video_full_screen" />


                <TextView
                    android:id="@+id/video_play_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="15dp"
                    android:text="00:12:20"
                    android:textColor="#FFFFFF"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/video_start_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/startplay" />

                <TextView
                    android:id="@+id/video_connecting_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/video_connecting"
                    android:textColor="@color/white"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/video_hang_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:background="@mipmap/video_hang_up"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/video_h_footer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#232323"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">


                <CheckBox
                    android:id="@+id/cb_screen_shot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@mipmap/video_screenshot"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/screenshot_name"
                    android:textColor="#fff" />

                <CheckBox
                    android:id="@+id/cb_mute"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@drawable/cb_mute"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/mute_name"
                    android:textColor="#fff" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/hangup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/hangup"
                        android:gravity="center" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/cb_hands_free"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@drawable/cb_voice"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/novoice"
                    android:textColor="#fff" />

                <CheckBox
                    android:id="@+id/cb_screen_record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@drawable/cb_recording"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="@string/recording_name"
                    android:textColor="#fff" />


            </LinearLayout>


        </LinearLayout>


        <!-- 锁 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.yarolegovich.discretescrollview.DiscreteScrollView
                android:id="@+id/forecast_city_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/video_h_no_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@mipmap/lock_no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_11"
                    android:drawablePadding="@dimen/dp_9"
                    android:gravity="center"
                    android:text="@string/select_no_lock"
                    android:textColor="#ABABAB" />
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
