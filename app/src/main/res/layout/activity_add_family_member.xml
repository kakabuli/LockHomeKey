<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/head"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/add_user_hint_icon"
            android:drawablePadding="@dimen/dp_7"
            android:text="@string/add_family_member_hint"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_99"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/retangle_fff_4">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                android:src="@mipmap/add_user_people_icon" />

            <EditText
                android:id="@+id/et_telephone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/input_other_telephone_or_account"
                android:maxLines="1"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textColorHint="#999999"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_88"
            android:layout_marginRight="@dimen/dp_88"
            android:layout_marginBottom="@dimen/dp_48"
            android:background="@drawable/go_and_buy"
            android:text="@string/dialog_confirm"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>


</LinearLayout>