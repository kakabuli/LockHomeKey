<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context="com.kaadas.lock.activity.device.cateye.more.SmartEyeActivity">

    <include layout="@layout/head"></include>


    <RelativeLayout
        android:id="@+id/rl_smart_monitor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/smart_monitor"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />

        <ImageView
            android:id="@+id/iv_smart_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@mipmap/iv_close" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9"></View>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_smart_linger"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/pir_linger"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13"
            android:id="@+id/textView" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/6"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pir_smart_right_linger"
            android:layout_marginRight="10dp"/>


        <ImageView
            android:id="@+id/pir_smart_right_linger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9"></View>
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl_smart_default"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/pir_default"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13"
             />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pir_hight"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/pir_smart_right_default"
            android:layout_marginRight="10dp"/>


        <ImageView
            android:id="@+id/pir_smart_right_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9"></View>
    </RelativeLayout>
</LinearLayout>
