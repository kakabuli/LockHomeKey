                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:background="#EAE9E9" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_real_time_video"
