<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_lock"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/help"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三步：修改初始管理密码"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18"
            />
        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dkjsfkjhad"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_13"
            android:lineSpacingExtra="@dimen/dp_8"
            />

    </LinearLayout>
    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/iv_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/wifi_lock_add_wake_anim"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <View
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/already_modify"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/go_and_buy"
            android:layout_marginTop="@dimen/dp_18"
            android:text="下一步"
            android:textColor="#fff"
            android:layout_marginBottom="@dimen/dp_20"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/not_modify"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/bg_button_line_blue"
            android:text="去修改管理密码"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_15"
            android:layout_marginBottom="@dimen/dp_40"
            android:visibility="gone"
            />


        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/not_modify_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="如何修改初始管理密码?"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_13"
            android:layout_marginBottom="@dimen/dp_40"

            />

    </LinearLayout>


</LinearLayout>