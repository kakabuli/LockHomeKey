<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context="com.kaadas.lock.activity.addDevice.rg4300.AddRg4300InputWifiActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/input_wifi"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/help"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <TextView
        android:layout_marginTop="@dimen/dp_36"
        android:layout_gravity="center"
        android:textColor="#565656"
        android:text="连接您的家庭Wi-Fi，绑定网关"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/dp_14"
        android:layout_gravity="center"
        android:textSize="13sp"
        android:text="暂不支持5G频段的Wi-Fi以及酒店机场需认证的Wi-Fi"
        android:textColor="#606060"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_white_10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp_10"
                android:src="@mipmap/add_wifi_lock_wifi" />

            <EditText
                android:id="@+id/ap_ssid_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_line_ffdcdcdc"
                android:clickable="false"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="end"
                android:enabled="false"
                android:hint="@string/fjdskj"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#959595"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:textSize="14sp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40">


            <EditText
                android:id="@+id/ap_password_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/edit_text_line_ffdcdcdc"
                android:drawableLeft="@mipmap/add_wifi_lock_pwd"
                android:drawablePadding="@dimen/dp_10"
                android:ellipsize="end"
                android:hint="@string/please_input_wifi_password"
                android:inputType="textPassword"
                android:paddingRight="32dp"
                android:textCursorDrawable="@drawable/edittext_cursor"
                android:singleLine="true"
                android:textColor="#000"
                android:textColorHint="#959595"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:src="@mipmap/eye_close_has_color" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_48"
        android:textColor="#606060"
        android:text="请使用手机连接2.4G  Wi-F "
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="@dimen/dp_70"
        android:id="@+id/button_next"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:background="@drawable/go_and_buy"
        android:gravity="center"
        android:text="@string/add_rg4300_first_notice3"
        android:textColor="#fff"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/tv_support_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/edit_text_line_209afd"
        android:gravity="center"
        android:text="@string/look_wifi_support_rout"
        android:textColor="#1F96F7"
        android:textSize="12sp" />


</LinearLayout>
