<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.kaadas.lock.activity.device.wifilock.add.WifiLockNoticeUserLinkWifiFirstActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="#F8F8F8">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_5"
                android:src="@mipmap/back_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/link_wifi"
                android:textColor="#000000"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_16"
                android:paddingTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_5"
                android:src="@mipmap/help" />
        </RelativeLayout>

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_12"
            android:src="@mipmap/wifi_lock_notice1" />


        <LinearLayout
            android:layout_marginHorizontal="@dimen/dp_25"
            android:background="#ffff"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@mipmap/wifi_lock_notice2" />
            <ImageView
                android:id="@+id/copy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/wifi_lock_notice4" />

        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@mipmap/wifi_lock_notice3" />

        <View
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/go_to_connect"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="center"
            android:background="@drawable/go_and_buy"
            android:gravity="center"
            android:text="@string/go_to_link"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="@dimen/sp_15" />


        <EditText
            android:gravity="center_horizontal"
            android:id="@+id/et_other_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/edit_text_line_1f967f"
            android:editable="false"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/other_set_up_method"
            android:textColor="#1F96F7"
            android:textSize="12sp" />
    </LinearLayout>



</ScrollView>
