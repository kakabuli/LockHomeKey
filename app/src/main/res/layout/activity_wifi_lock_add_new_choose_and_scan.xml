<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/choose_to_add_wifi"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/help"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:padding="2dp">

        <EditText
            android:id="@+id/wifi_lock_choose_to_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_text_field"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="13dp"
            android:hint="@string/input_lock_product"
            android:paddingLeft="10dp"
            android:layout_marginRight="@dimen/dp_51"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/add"
            android:text="@string/add"
            android:textColor="#1F95F7"
            android:textSize="@dimen/dp_15"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:gravity="center"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/wifi_lock_choose_to_scan"
        android:layout_width="match_parent"
        android:layout_height="295.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_13"
        android:background="#ffFFFFFF"
        android:orientation="vertical"
        >

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/dp_32"
            android:text="@string/look_for_QRCode"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/sp_15"
            />

        <ImageView
            android:src="@mipmap/wifi_lock_choose_to_add"
            android:layout_margin="@dimen/dp_25"
            android:layout_marginLeft="106dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_78"
            android:layout_alignParentBottom="true"
            />

    </LinearLayout>


</LinearLayout>