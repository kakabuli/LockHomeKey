<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context="com.kaadas.lock.activity.device.wifilock.WifiLockAMActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/am_mode"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/lock_mode"
        android:textColor="#333333"
        android:textSize="15sp"
        android:text="模式"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_gravity="center"
        android:src="@mipmap/am_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

   <ImageView
       android:layout_marginHorizontal="@dimen/dp_15"
       android:layout_gravity="center"
       android:src="@mipmap/am_mode_notice"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />



</LinearLayout>
