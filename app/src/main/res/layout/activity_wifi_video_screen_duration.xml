<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/screen_duration"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/title"
        android:id="@+id/rl_screen_light_duration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68"
        android:background="#FFFFFF"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/screen_duration_text"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/screen_duration_des"
                android:textColor="#999999"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_screen_light_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/wandering_alarm_selector" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9"></View>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_screen_light_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_below="@+id/rl_screen_light_duration"
       >

        <RelativeLayout
            android:id="@+id/rl_screen_light_duration_5s"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/screen_light_duration_5s"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <CheckBox
                android:id="@+id/ck_screen_light_duration_5s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:button="@drawable/wandering_judge_time_selector"
                android:clickable="false"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:background="#EAE9E9"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_screen_light_duration_10s"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/screen_light_duration_10s"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <CheckBox
                android:id="@+id/ck_screen_light_duration_10s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:button="@drawable/wandering_judge_time_selector"
                android:clickable="false"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:background="#EAE9E9"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_screen_light_duration_15s"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="#FFFFFF"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="@string/screen_light_duration_15s"
                android:textColor="#333333"
                android:textSize="@dimen/sp_13" />

            <CheckBox
                android:id="@+id/ck_screen_light_duration_15s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:button="@drawable/wandering_judge_time_selector"
                android:clickable="false"
                />

        </RelativeLayout>

    </LinearLayout>



    <com.kaadas.lock.widget.AVLoadingIndicatorView
        android:id="@+id/avi"
        style="@style/AVLoadingIndicatorView.Large"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_150"
        app:indicatorColor="#333333"/>

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/wifi_video_lock_waiting"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:layout_below="@id/avi"/>
</RelativeLayout>