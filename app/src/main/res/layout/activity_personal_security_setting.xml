<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    >
    <include
        android:id="@+id/in_head"
        layout="@layout/head"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">
            <TextView
                android:id="@+id/security_setting_switch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="#333333"
                android:text="@string/open_hand_pwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/security_setting_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:theme="@style/SwitchTheme"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_alignParentBottom="true"
                android:background="#F2F2F2"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/update_hand_pwd_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="#333333"
                android:text="@string/update_hand_pwd"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@mipmap/right"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_alignParentBottom="true"
                android:background="#F2F2F2"></View>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="#333333"
                android:text="@string/open_touch_id"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/open_touch_id_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:theme="@style/SwitchTheme"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>