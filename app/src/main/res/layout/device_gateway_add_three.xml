<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    >
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_gateway"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_104"
        android:layout_below="@+id/head_layout"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/being_connect_gateway"
        />

    <Button
        android:id="@+id/cancel_bind"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_44"
        android:layout_centerHorizontal="true"
        android:text="@string/go_to_unbind"
        android:textColor="#ffffffff"
        android:textSize="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_48"
        android:background="@drawable/go_and_buy"
        />


    <LinearLayout
        android:id="@+id/remind_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal"
        android:background="@drawable/remind_background"
        android:layout_above="@+id/cancel_bind"
        android:layout_marginBottom="@dimen/dp_113"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/remind"
            android:layout_marginLeft="@dimen/dp_22"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_19"
            android:lineSpacingExtra="@dimen/dp_8"
            android:text="@string/wifi_is_connecting"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13" />
    </LinearLayout>
<Button
    android:id="@+id/test"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_50"
    android:text="点击"
    />

</RelativeLayout>