<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:id="@+id/history_loading_download_rl"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            >


            <ProgressBar
                android:id="@+id/history_loading_download_pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminateTint="#242424"
                />

            <TextView
                android:layout_below="@id/history_loading_download_pb"
                android:id="@+id/loading_download_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_loading1"
                android:textColor="#242424"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
