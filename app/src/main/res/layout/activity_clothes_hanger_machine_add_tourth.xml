<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_device1"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:visibility="gone"
            android:src="@mipmap/help" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E8E8E8"/>


    <TextView
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_36"
        android:text="连接您的家庭WiFi"
        android:textColor="#333333"
        android:textSize="@dimen/sp_17"
        android:layout_marginLeft="@dimen/dp_66"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_66"
        android:text="@string/clothes_hanger_machine_notice"
        android:textColor="#7D7D7D"
        android:lineSpacingExtra="@dimen/dp_5"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/add_wifi_lock_wifi" />

        <com.kaadas.lock.widget.DropEditText
            android:id="@+id/ap_ssid_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/edit_text_line_ffdcdcdc"
            android:drawablePadding="@dimen/dp_10"
            android:ellipsize="end"
            android:hint="@string/fjdskj"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#959595"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/sp_14" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_30">


        <EditText
            android:id="@+id/ap_password_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/edit_text_line_ffdcdcdc"
            android:drawableLeft="@mipmap/add_wifi_lock_pwd"
            android:drawablePadding="@dimen/dp_10"
            android:ellipsize="end"
            android:hint="@string/please_input_wifi_password"
            android:inputType="textPassword"
            android:paddingRight="32dp"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#959595"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/eye_close_has_color" />

    </RelativeLayout>

    <View
        android:layout_weight="1"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_1"/>

    <TextView
        android:gravity="center"
        android:id="@+id/confirm_btn"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_44"
        android:layout_gravity="center"
        android:background="@drawable/go_and_buy"
        android:text="@string/next_step"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_46"
        android:textSize="@dimen/sp_15" />


</LinearLayout>