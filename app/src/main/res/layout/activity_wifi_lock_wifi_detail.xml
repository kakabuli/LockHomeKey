<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/activity_wifi_lock_wifi_detail_title"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EAE9E9" />

    <RelativeLayout
        android:id="@+id/rl_replace_wifi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/activity_wifi_lock_wifi_detail_title"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_16"
            android:drawableRight="@mipmap/right"
            android:drawablePadding="@dimen/dp_7"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_replace_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/activity_wifi_lock_wifi_detail_name"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="@string/activity_wifi_lock_wifi_detail_strength"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_wifi_strength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="RSSI"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_rssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="MAC"
            android:textColor="#333333"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:background="#EAE9E9" />
    </RelativeLayout>

</LinearLayout>