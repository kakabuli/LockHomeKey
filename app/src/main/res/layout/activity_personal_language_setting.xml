<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/head"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/zh_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">

            <TextView
                android:id="@+id/zh_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:drawableLeft="@mipmap/language_setting_cn_icon"
                android:drawablePadding="@dimen/dp_27"
                android:text="@string/setting_language_zh"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <CheckBox
                android:id="@+id/zh_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_17"
                android:button="@drawable/language_selector"
                android:clickable="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F2F2F2"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tranitional_chinese"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:drawableLeft="@mipmap/language_setting_ct_icon"
                android:drawablePadding="@dimen/dp_27"
                android:text="@string/tranitional_chinese"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <CheckBox
                android:id="@+id/cb_ct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_17"
                android:button="@drawable/language_selector"
                android:clickable="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F2F2F2"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/en_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"

            >

            <TextView
                android:id="@+id/en_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:drawableLeft="@mipmap/language_setting_en_icon"
                android:drawablePadding="@dimen/dp_27"
                android:text="@string/setting_language_en"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <CheckBox
                android:id="@+id/en_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_17"
                android:button="@drawable/language_selector"
                android:clickable="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#F2F2F2"></View>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/thai_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"

            >

            <TextView
                android:id="@+id/thai_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_24"
                android:drawableLeft="@mipmap/language_setting_th_icon"
                android:drawablePadding="@dimen/dp_27"
                android:text="@string/setting_language_tai"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <CheckBox
                android:id="@+id/thai_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_17"
                android:button="@drawable/language_selector"
                android:clickable="false"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/more_line" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/language_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_88"
            android:layout_marginRight="@dimen/dp_88"
            android:layout_marginBottom="@dimen/dp_48"
            android:background="@drawable/go_and_buy"
            android:text="@string/affirm"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>


</LinearLayout>