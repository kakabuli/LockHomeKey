<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_device1"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:visibility="gone"
            android:src="@mipmap/help" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#E8E8E8"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/clothes_machine_add_third_failed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:textColor="#666666"
        android:textSize="@dimen/sp_15"
        android:text="@string/pair_failed"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_155"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_32"
        android:background="#F7F7F7">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_26"
            android:drawableLeft="@drawable/circle_d5d5d5"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            android:drawablePadding="@dimen/dp_11"
            android:text="确保连接的WiFi是2.4G频率"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_11"
            android:drawableLeft="@drawable/circle_d5d5d5"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_26"
            android:text="确保已输入正确的WiFi账号和密码"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_11"
            android:drawableLeft="@drawable/circle_d5d5d5"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_26"
            android:text="确保连接的WiFi路由器处于联网状态"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:drawablePadding="@dimen/dp_11"
            android:drawableLeft="@drawable/circle_1f96f7"
            android:layout_marginLeft="@dimen/dp_26"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_14"
            android:text="查看晾衣机WiFi支持家庭路由器"/>
    </LinearLayout>
    
    <View
        android:layout_weight="1"
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_1"/>
    <TextView
        android:id="@+id/button_confirm"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_18"
        android:background="@drawable/go_and_buy"
        android:gravity="center"
        android:text="@string/clothes_hanger_add_next"
        android:textColor="#fff"
        android:textSize="@dimen/sp_15"
        />

    <TextView
        android:id="@+id/button_reconnection"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_46"
        android:background="@drawable/bg_button_line_blue"
        android:gravity="center"
        android:textColor="#1F96F7"
        android:text="@string/clothes_hanger_add_reconnect"
        android:textSize="@dimen/sp_15"
        />
</LinearLayout>
