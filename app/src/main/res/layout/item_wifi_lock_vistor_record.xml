<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_29"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >


    <TextView
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginVertical="@dimen/dp_15"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="今天"
        android:id="@+id/tv_day_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_21"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:text="16:40:58"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_18"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/bluetooth_common_icon" />

            <View
                android:id="@+id/view_bottom"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_72"
                android:background="#999999"
                android:visibility="invisible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_pic"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_16">
            <ImageView

                android:id="@+id/iv_content"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_70"
                android:scaleType="fitXY"

                />
            <ImageView
                android:id="@+id/iv_paly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/video_lock_icon_play"
                android:layout_centerInParent="true"
                android:visibility="gone"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_34"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:text="16:40"
            android:textColor="#999999"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:id="@+id/driver"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_4"
        android:background="#D8D8D8"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>