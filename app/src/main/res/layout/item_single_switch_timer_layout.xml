<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:background="@drawable/background_add_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_wait"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="16dp"
            android:src="@mipmap/single_switch_timer_wait_blue" />

        <TextView
            android:layout_marginLeft="@dimen/dp_12"
            android:gravity="center"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/iv_wait"
            android:includeFontPadding="false"
            android:padding="0dp"
            android:text="18:00 - 22:00"
            android:textColor="#313131"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:id="@+id/tv_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_toRightOf="@+id/iv_wait"
            android:text="不重复"
            android:textColor="#2C2C2C"
            android:textSize="12sp" />

        <ImageView
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/iv_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/single_switch_timer_switch_blue" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_6"
        android:background="#ffeeeeee"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <TextView
        android:layout_marginLeft="37dp"
        android:layout_marginVertical="@dimen/dp_12"
        android:id="@+id/tv_action"
        android:textColor="#2C2C2C"
        android:textSize="12sp"
        android:text="电源开关1-开启"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>