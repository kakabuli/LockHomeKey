<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_132"
    android:background="@drawable/remind_background"
    android:layout_marginTop="@dimen/dp_15"
    >
    <ImageView
        android:id="@+id/device_add_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/device_add_zigbee"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_22"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/device_add_item_img"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/device_add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_zigbee"
            android:textColor="#ff000000"
            android:textSize="@dimen/sp_15"
            />
        <TextView
            android:id="@+id/device_add_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_add_zigbee"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_11"
            android:layout_marginTop="@dimen/dp_11"
            />
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_69"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/add_background"
        android:gravity="center"
        android:text="@string/add"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_13"
        />
    
    
</RelativeLayout>