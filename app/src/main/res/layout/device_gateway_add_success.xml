<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_gateway"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_96"
        android:src="@mipmap/add_gateway_success"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/remind_background"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/remind"
            android:layout_marginLeft="@dimen/dp_23"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gateway_bind_success"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                />


    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/button_add_zigbee"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_44"
                    android:background="@drawable/go_and_buy"
                    android:layout_centerHorizontal="true"
                    android:text="@string/go_to_add_zigbee_device"
                    android:textColor="#FFF"
                    android:textSize="@dimen/sp_15"
                    android:layout_centerInParent="true"
                    />
                <Button
                    android:id="@+id/button_stop"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_44"
                    android:background="@drawable/button_next"
                    android:layout_centerHorizontal="true"
                    android:text="@string/no_add_zigbee_device"
                    android:textColor="#1F96F7"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_26"
                    />

            </LinearLayout>

</LinearLayout>