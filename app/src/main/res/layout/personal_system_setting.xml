<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/device_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/safe_mode_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/device_item_background"

        >

        <ImageView
            android:id="@+id/system_language_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/iv_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting"
            android:textColor="@color/device_detail_title"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/device_item_background"
        android:orientation="vertical">
        <!-- <RelativeLayout
             android:id="@+id/language_setting_layout"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/dp_60">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/admin_password"
                 android:textSize="@dimen/sp_12"
                 android:text="@string/language_setting"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="@dimen/dp_13"
                 />
             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="@dimen/dp_13"
                 android:src="@mipmap/right"
                 />

         </RelativeLayout>-->
        <!-- <TextView
             android:layout_width="match_parent"
             android:layout_height="@dimen/dp_1"
             android:background="@color/dialog_line"
             android:layout_marginRight="@dimen/dp_13"
             android:layout_marginLeft="@dimen/dp_13"
             />-->
        <RelativeLayout
            android:id="@+id/version_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/version_num"
                android:textColor="@color/admin_password"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_13"
                android:src="@mipmap/right" />

            <TextView
                android:id="@+id/version_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/right"
                android:text="1.2.1"
                android:textColor="@color/more_deviceName"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/dialog_line" />

        <RelativeLayout
            android:id="@+id/user_agreement_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/user_agreement"
                android:textColor="@color/admin_password"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_13"
                android:src="@mipmap/right" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/dialog_line" />

        <RelativeLayout
            android:id="@+id/help_log_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/help_log"
                android:textColor="@color/admin_password"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_13"
                android:src="@mipmap/right" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:background="@color/dialog_line" />

        <RelativeLayout
            android:id="@+id/clear_cache_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_13"
                android:text="@string/clear_cache"
                android:textColor="@color/admin_password"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_13"
                android:src="@mipmap/right" />

            <TextView
                android:id="@+id/cache_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/dialog_line" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/device_item_background">

        <Button
            android:id="@+id/log_out"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="@drawable/go_and_buy"
            android:text="@string/log_out"
            android:textColor="@color/device_item_background"
            android:textSize="@dimen/dp_14" />


    </RelativeLayout>

</LinearLayout>