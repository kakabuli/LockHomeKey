<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/head"></include>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_61"
        android:src="@mipmap/door_card_icon" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_26"
        android:textColor="#999999"
        android:textSize="@dimen/sp_15" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_88"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginRight="@dimen/dp_88"
        android:background="@drawable/retangle_ff3b30_22"
        android:text="@string/delete_card"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dp_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/retangle_fff_4"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_26"
                android:text="@string/ming_cheng"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#999999"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center"
                android:textSize="@dimen/sp_17" />

            <ImageView
                android:id="@+id/iv_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_14"
                android:src="@mipmap/bluetooth_user_detail_edit_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#EAE9E9"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_26"
                android:text="@string/authorization_time"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#999999"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>