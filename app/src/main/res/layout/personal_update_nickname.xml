<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/device_background"
    >
    <RelativeLayout
        android:id="@+id/safe_mode_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/device_item_background"

        >
        <ImageView
            android:id="@+id/update_nickname_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/iv_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:textColor="@color/device_detail_title"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@color/device_item_background"
        >
        <TextView
            android:id="@+id/nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/admin_password"
            android:textSize="@dimen/sp_12"
            android:text="@string/nickname"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            />

        <EditText
            android:id="@+id/et_nickName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/nickname_text"
            android:layout_toLeftOf="@+id/delete"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@null"
            android:ellipsize="end"
            android:maxLength="16"
            android:singleLine="true"
            android:textColorHint="#A5A6AC"
            android:textSize="@dimen/sp_14"
            />
       <ImageView
           android:id="@+id/delete"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:paddingRight="@dimen/dp_13"
           android:paddingLeft="@dimen/dp_13"
           android:paddingTop="@dimen/dp_6"
           android:paddingBottom="@dimen/dp_6"
           android:src="@mipmap/nickname_delete"

           />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/device_item_background"
        >
        <Button
            android:id="@+id/save_nickname"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_60"
            android:layout_centerHorizontal="true"
            android:background="@drawable/go_and_buy"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_165"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/device_item_background"
            />
    </RelativeLayout>

</LinearLayout>