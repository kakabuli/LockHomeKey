<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_132"
    android:background="#FFF"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_10"
    >
    <ImageView
        android:id="@+id/gateway_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/gateway_img_icon"
        android:layout_marginLeft="@dimen/dp_26"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/gateway_img"
        android:layout_marginLeft="@dimen/dp_28"
        >
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="Interface"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/admin"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="1456235896"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/gateway_id"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                />
            <TextView
                android:id="@+id/gateway_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="GW01182510040"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/gateway_online_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wifi_connect"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/gateway_online_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/online"
                android:textColor="#1F96F7"
                android:textSize="@dimen/sp_12"
                android:layout_marginLeft="@dimen/dp_12" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/gateway_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:src="@mipmap/choose_no"
        />
</RelativeLayout>