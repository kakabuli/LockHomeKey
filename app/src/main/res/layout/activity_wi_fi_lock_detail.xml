<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.7"
        android:orientation="vertical"
        android:background="@drawable/background_gradient_large_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_17"
                android:src="@mipmap/back_white" />

            <TextView
                android:id="@+id/tv_bluetooth_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_50"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textSize="@dimen/sp_17" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_lock_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bluetooth_lock_default" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_type"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="K9"
                    android:textSize="@dimen/sp_14"
                    />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1" >


            <TextView
                android:id="@+id/tv_lock_type"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_marginLeft="@dimen/dp_30"
                android:id="@+id/ll_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.kaadas.lock.utils.BatteryView
                    android:id="@+id/iv_power"
                    android:layout_width="21dp"
                    android:layout_height="12dp"
                    app:batteryColor="#25F290"
                    app:batteryOrientation="horizontal"
                    app:batteryPower="0" />

                <TextView
                    android:id="@+id/tv_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="80%(2019/10/25)"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/detail_function_recyclerView"
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_15"
        android:background="@color/device_item_background"
        >
    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/detail_function_onLine"
        android:layout_width="match_parent"
        android:layout_weight="1.2"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/device_item_background"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>