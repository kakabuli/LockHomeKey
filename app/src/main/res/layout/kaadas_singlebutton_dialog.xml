<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kaadas_retangle_ffffff_3"
    android:orientation="vertical"
    android:paddingTop="23pt"
    >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="@color/color_333333"
        android:textSize="17pt"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textColor="#666666"
        android:textSize="14pt"
        android:gravity="center"
        android:layout_marginTop="18pt"
        />

    <Button
        android:id="@+id/tv_button"
        android:layout_width="match_parent"
        android:layout_height="40pt"
        android:text="@string/dialog_confirm"
        android:textColor="@color/white"
        android:layout_marginTop="35pt"
        android:textSize="16pt"
        android:gravity="center"
        android:background="@drawable/kaadas_retangle_0066a1_3"
        android:layout_marginEnd="12pt"
        android:layout_marginStart="12pt"
        android:layout_marginBottom="12pt"
        />



</LinearLayout>