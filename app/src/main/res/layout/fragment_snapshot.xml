<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">


    <include layout="@layout/time_select_header"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/history_gallery_rl_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/history_refreshLayout_ff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/history_rv_ff"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

        </RelativeLayout>



        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/history_loading_download_rl"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            >


            <ProgressBar
                android:id="@+id/history_loading_download_pb"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:indeterminateTint="#FF4081"
                />

            <TextView
                android:id="@+id/loading_download_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_loading1"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                />


        </RelativeLayout>


        <!--   android:background="#78BEF7" -->
        <LinearLayout
            android:id="@+id/pir_history_all_ll"
            android:background="#DD78BEF7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pir_history_notic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:id="@+id/pir_history_add_cancle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/pir_history_add_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/pre_cancle_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
