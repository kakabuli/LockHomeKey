<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <include layout="@layout/head"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_one"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/user_feedback_type_bj_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/account_problem"
                android:textColor="@drawable/user_feedback_type_text_slector"
                android:textSize="@dimen/sp_15" />

            <RadioButton
                android:id="@+id/rb_two"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/user_feedback_type_bj_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/payment_problem"
                android:textColor="@drawable/user_feedback_type_text_slector"
                android:textSize="@dimen/sp_15" />

            <RadioButton
                android:id="@+id/rb_three"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_35"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/user_feedback_type_bj_selector"
                android:button="@null"
                android:gravity="center"
                android:text="@string/no_signal"
                android:textColor="@drawable/user_feedback_type_text_slector"
                android:textSize="@dimen/sp_15" />
        </RadioGroup>

        <EditText
            android:id="@+id/et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_74"
            android:layout_marginRight="@dimen/dp_17"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/user_feedback_hint"
            android:lineSpacingExtra="@dimen/dp_8"
            android:maxLength="300"
            android:textColorHint="#8E8E93"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_18"
            android:text="0/300"
            android:textColor="#8E8E93"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_88"
            android:layout_marginRight="@dimen/dp_88"
            android:layout_marginBottom="@dimen/dp_48"
            android:background="@drawable/go_and_buy"
            android:text="@string/submit"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
</LinearLayout>