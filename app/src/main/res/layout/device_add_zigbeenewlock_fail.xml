<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_75"
        android:src="@mipmap/cat_eye_suit_fail"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/device_connect_network_fail"
        android:textColor="#ff999999"
        android:textSize="@dimen/sp_15"
        />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_36"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/remind_background"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/remind_background"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/one_icon"
                android:layout_marginLeft="@dimen/dp_23"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_eye_suit_fail_one"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                tools:ignore="HardcodedText" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_57"
            android:background="#EAE9E9"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/two_icon"
                android:layout_marginLeft="@dimen/dp_23"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_eye_suit_fail_two"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_57"
            android:background="#EAE9E9"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#FFF"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/three_icon"
                android:layout_marginLeft="@dimen/dp_23"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cat_eye_suit_fail_three"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_17"
                android:lineSpacingExtra="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_24"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_225"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@mipmap/remind_small_icon"
          />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#ff333333"
           android:textSize="@dimen/sp_12"
           android:layout_marginLeft="@dimen/dp_8"
           android:text="@string/cat_eye_suit_fail_remind"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button_again"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/go_and_buy"
            android:text="@string/device_try"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_15"
            />
        <Button
            android:id="@+id/hand_bind"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/button_next"
            android:text="@string/quit"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_26"
            android:textColor="#1F96F7"
            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>