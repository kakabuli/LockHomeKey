<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:baselineAligned="false"
              android:orientation="vertical"
              android:paddingBottom="12dip"
              android:paddingLeft="12dip"
              android:paddingRight="12dip"
              android:paddingTop="12dip">


    <TextView
        android:background="@drawable/dialog_selector_top"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingTop="10dip"
        android:text="@string/select_updata_method"
        android:textColor="@color/main_tab_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_bottom_update_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/main_tab_text"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text=""
        android:background="@drawable/dialog_selector_top_no"
        android:paddingBottom="8dip"
        />

    <TextView
        android:background="#FFCED2D6"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:background="@drawable/dialog_selector_center_select_market"
        android:id="@+id/lay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:orientation="vertical"/>

    <TextView
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_selector_singleton"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="@string/cancel"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>