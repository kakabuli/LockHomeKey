<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#F8F8F8">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_gateway"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_55"
        android:text="@string/gateway_light_confirm"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_17"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_8"
        />
    <ImageView
        android:id="@+id/add_device_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_132"
        android:src="@mipmap/add_gateway_one" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_next"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_50"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/setting"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_32"
                android:gravity="center"
                android:text="@string/gateway_light_setting"
                android:textColor="#1F96F7"
                android:textSize="@dimen/sp_12"
                />

        </LinearLayout>


        <Button
            android:id="@+id/button_next"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/go_and_buy"
            android:text="@string/add_next"
            android:textColor="#FFF"
            android:textSize="@dimen/sp_15"
            android:layout_marginBottom="@dimen/dp_48"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            />
        </RelativeLayout>

</LinearLayout>