<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_gateway"
            android:textColor="#000000"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/add_device_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_85"
        android:src="@mipmap/add_gateway_one" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/remind_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_93"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/remind_background"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_22"
                android:src="@mipmap/remind" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_19"
                android:lineSpacingExtra="@dimen/dp_8"
                android:text="@string/gateway_light_confirm"
                android:textColor="#333333"
                android:textSize="@dimen/dp_13" />
        </LinearLayout>

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_below="@+id/remind_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_50"
            android:gravity="center"
            android:text="@string/gateway_light_setting"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/button_next"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_45"
            android:background="@drawable/button_next"
            android:text="@string/add_next"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>
</LinearLayout>