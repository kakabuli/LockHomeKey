<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#FFFFFF"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_gateway"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/add_device_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/add_gateway_one"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_85"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:id="@+id/remind_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_93"
        android:background="@drawable/remind_background"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/remind"
            android:layout_marginLeft="@dimen/dp_22"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_19"
            android:lineSpacingExtra="@dimen/dp_8"
            android:text="@string/gateway_light_confirm"
            android:textColor="#333333"
            android:textSize="@dimen/dp_13" />
    </LinearLayout>
        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:textColor="#1F96F7"
            android:textSize="@dimen/sp_12"
            android:text="@string/gateway_light_setting"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/remind_layout"
            android:gravity="center"
            />
    <Button
        android:id="@+id/button_next"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/button_next"
        android:layout_centerHorizontal="true"
        android:text="@string/add_next"
        android:textColor="#1F96F7"
        android:textSize="@dimen/sp_15"
        android:layout_marginBottom="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        />
    </RelativeLayout>
</LinearLayout>