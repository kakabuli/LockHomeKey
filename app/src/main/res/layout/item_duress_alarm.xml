<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:layout_marginStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_10"
        android:textStyle="bold"
        android:textColor="@color/color_333333"/>

    <TextView
        android:id="@+id/tv_password_num"
        android:layout_below="@+id/tv_password"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:text=""
        android:gravity="center_vertical"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_333333"
        android:layout_height="@dimen/dp_60"></TextView>

    <RelativeLayout
        android:id="@+id/rl_duress_alarm_toggle"
        android:layout_below="@+id/tv_password_num"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:text="@string/stress_alarm"
            android:textSize="@dimen/sp_13"/>


        <TextView
            android:id="@+id/tv_duress_alarm_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:drawableRight="@mipmap/right"
            android:drawablePadding="@dimen/dp_7"
            android:textColor="#999999"
            android:text="@string/open"
            android:textSize="@dimen/sp_12"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_duress_alarm_password_notification"
        android:layout_below="@+id/rl_duress_alarm_toggle"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_13"
            android:layout_centerVertical="true"
            android:text="@string/device_duress_alarm_notification"
            />

        <TextView
            android:id="@+id/tv_duress_alarm_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_12"
            android:textColor="#999999"
            />
    </RelativeLayout>

</RelativeLayout>