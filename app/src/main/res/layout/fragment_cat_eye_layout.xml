<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#00000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="33"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_40">

            <RelativeLayout
                android:id="@+id/rl_icon"
                android:layout_width="180dp"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/iv_external_big"
                    android:layout_width="179dp"
                    android:layout_height="179dp" />

                <ImageView
                    android:id="@+id/iv_external_middle"
                    android:layout_width="142dp"
                    android:layout_height="142dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_external_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/iv_inner_small"
                    android:layout_width="wrap_content"


                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_40" />

                <ImageView
                    android:id="@+id/iv_inner_middle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp" />

                <TextView
                    android:id="@+id/tv_inner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/iv_inner_middle"
                    android:layout_marginTop="15dp"
                    android:text="jjfikfj"
                    android:textColor="#FEFEFE"
                    android:textSize="@dimen/sp_11" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_external"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@id/rl_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_18"
                android:gravity="center"
                android:text=""
                android:textColor="#C6F5FF"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="#F2F2F2">
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_40"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                >

                <RelativeLayout
                    android:id="@+id/rl_has_data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_18"
                    android:visibility="gone"
                    >

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycleview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_12"
                        android:padding="@dimen/dp_18"
                        android:visibility="gone"
                        android:text="@string/more"
                        android:textColor="#1F96F7"
                        android:textSize="@dimen/sp_12" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/no_cateye_record_please_synchronized"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/retangle_fff_4" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/guard_time"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#1F96F7"
                android:textSize="20sp"
                android:text="59"
                android:singleLine="true"
                android:ellipsize="end"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_12"
                android:text="@string/day"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_device_dynamic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:text="@string/equipment_dynamic"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/device_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/online"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#1F96F7"
                android:textSize="18sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_device_dynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_20"
            android:src="@mipmap/right" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>