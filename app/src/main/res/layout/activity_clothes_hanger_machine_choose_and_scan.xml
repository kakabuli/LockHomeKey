<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
      >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/choose_to_add_wifi"
            android:textSize="@dimen/sp_17"
            android:textColor="#000000"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/back_gray"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:src="@mipmap/help"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E8E8E8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_143"
        android:layout_margin="@dimen/dp_10"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方式一（手动输入添加）"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_29"/>

        <EditText
            android:id="@+id/wifi_lock_choose_to_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:background="@drawable/edit_choose_background"
            android:drawableLeft="@mipmap/video_lock_dms_icon_search"
            android:drawablePadding="@dimen/dp_13"
            android:hint="@string/input_clothes_product"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_14"
            android:singleLine="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/add"
            android:text="@string/add"
            android:textColor="#1F95F7"
            android:textSize="@dimen/dp_15"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/choose_background"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wifi_lock_choose_to_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:layout_margin="@dimen/dp_10"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方式二（扫码添加）"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_29"/>

        <ImageView
            android:src="@mipmap/video_lock_dms_img_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:text="扫码添加"
            android:textColor="#1F95F7"
            android:textSize="@dimen/dp_15"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/choose_background"
            android:layout_marginTop="@dimen/dp_25"
            android:gravity="center"
            />

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:text="请扫描说明书上的二维码，进行配网"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/sp_15"
            />
    </LinearLayout>




</LinearLayout>