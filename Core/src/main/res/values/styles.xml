<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_loading_view" parent="@android:style/Theme.Holo.DialogWhenLarge">
        <!--去掉边框-->
        <item name="android:windowFrame">@null</item>
        <!--悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--不需要标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--允许模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--全屏幕-->
        <item name="android:windowFullscreen">true</item>

    </style>


    <!--dialog$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$-end-->

    <style name="dialog_loading_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_small_text</item>
        <item name="android:padding">@dimen/common_margin5</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/dialog_title</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">20dp</item>

    </style>
    <style name="dialog_msg_style1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666464</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="dialog_btn_cancel">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dialog_btn_cancel</item>
        <item name="android:textSize">@dimen/big_small_text</item>
    </style>

    <style name="dialog_btn_confirm">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dialog_btn_confirm</item>
        <item name="android:textSize">@dimen/big_small_text</item>
    </style>

    <style name="dialog_common_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="toolbar_image_style">
        <item name="android:layout_width">@dimen/x46</item>
        <item name="android:layout_height">@dimen/y46</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="toolbar_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_medium_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

</resources>