<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:background="@color/default_bg_color"
    android:layout_marginTop="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="260dp"
            android:background="@color/white"
            android:layout_marginRight="2.5dp"
            >

            <TextView
                android:id="@+id/tv_cate_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能锁"
                android:textColor="#333333"
                android:textStyle="bold"
                android:textSize="21sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="33dp"
                />

            <TextView
                android:id="@+id/tv_cate_desc_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="致简时尚  是技术也是艺术"
                android:textColor="#8a7a6a"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="72dp"
                />

            <ImageView
                android:id="@+id/iv_cate_image_1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_2"
            android:layout_marginLeft="2.5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_height="260dp">

            <TextView
                android:id="@+id/tv_cate_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="猫眼"
                android:textColor="#333333"
                android:textSize="21sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="33dp"
                />

            <TextView
                android:id="@+id/tv_cate_desc_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="致简时尚  是技术也是艺术"
                android:textColor="#8a7a6a"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="72dp"
                />

            <ImageView
                android:id="@+id/iv_cate_image_2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        />

</LinearLayout>
