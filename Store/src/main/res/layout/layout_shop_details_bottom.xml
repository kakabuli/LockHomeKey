<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="51dp"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"
        />

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="horizontal"
       android:layout_height="match_parent">


       <LinearLayout
           android:id="@+id/ll_kefu"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:orientation="vertical"
           >

           <ImageView
               android:layout_width="17dp"
               android:layout_height="17dp"
               android:layout_marginTop="8dp"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/icon_custom_detail"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_marginTop="5dp"
               android:layout_gravity="center_horizontal"
               android:text="客服"
               android:textSize="10sp"
               android:textColor="#333333"
               />


       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll_shoucang"
           android:layout_width="50dp"
           android:layout_height="match_parent"
           android:visibility="gone"
           android:orientation="vertical"
           >

           <ImageView
               android:id="@+id/iv_collect"
               android:layout_width="17dp"
               android:layout_height="17dp"
               android:layout_marginTop="8dp"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/icon_collect_detail"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_gravity="center_horizontal"
               android:text="收藏"
               android:layout_marginTop="5dp"
               android:textSize="10sp"
               android:textColor="#333333"
               />


       </LinearLayout>

       <LinearLayout
           android:id="@+id/ll_shopcart"
           android:layout_width="50dp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

           <ImageView
               android:layout_width="17dp"
               android:layout_height="17dp"
               android:layout_marginTop="8dp"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/icon_cart_detail"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:layout_marginTop="5dp"
               android:layout_gravity="center_horizontal"
               android:text="购物车"
               android:textSize="10sp"
               android:textColor="#333333"
               />


       </LinearLayout>

       <View
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="1dp"/>


       <!--普通-->
       <LinearLayout
           android:id="@+id/ll_normal"
           android:layout_width="200dp"
           android:layout_height="40dp"
           android:orientation="horizontal"
           android:layout_marginRight="15dp"
           android:visibility="gone"
           android:layout_gravity="center_vertical"
           >

           <TextView
               android:id="@+id/tv_add_card"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="加入购物车"
               android:textSize="15sp"
               android:gravity="center"
               android:textColor="@color/white"
               android:background="@drawable/bg_add_cart"
               />

           <TextView
               android:id="@+id/tv_buy_now"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="立即购买"
               android:textSize="15sp"
               android:gravity="center"
               android:textColor="@color/white"
               android:background="@drawable/bg_buy_now"
               />

       </LinearLayout>


       <!--Z众筹-->
       <TextView
           android:id="@+id/tv_zhongchou"
           android:layout_width="150dp"
           android:layout_height="40dp"
           android:layout_gravity="center_vertical"
           android:text="支持项目"
           android:layout_marginLeft="120dp"
           android:textColor="#ffffff"
           android:textSize="18sp"
           android:background="@drawable/light_blue_btn_bg"
           android:gravity="center"
           android:visibility="gone"
           android:layout_marginRight="15dp"

           />

       <!--拼团-->
       <RelativeLayout
           android:id="@+id/rl_pintuan"
           android:layout_width="150dp"
           android:visibility="gone"
           android:background="@drawable/light_blue_btn_bg"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="15dp"
           android:layout_height="40dp">

           <LinearLayout
               android:layout_centerInParent="true"
               android:layout_width="wrap_content"
               android:orientation="horizontal"

               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/tv_price"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="¥1999/"
                   android:textSize="18sp"
                   android:textColor="@color/white"
                   />
               <TextView
                   android:id="@+id/tv_count"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="3人团"
                   android:textSize="12sp"
                   android:textColor="@color/white"
                   />


           </LinearLayout>
       </RelativeLayout>

       <!--秒杀-->

       <LinearLayout
           android:id="@+id/ll_miaosha"
           android:layout_width="100dp"
           android:layout_height="40dp"
           android:layout_marginRight="15dp"
           android:layout_gravity="center_vertical"
           android:orientation="horizontal"
           android:visibility="gone"
           android:background="@drawable/light_blue_btn_bg"
           >


           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="match_parent"
               android:text="立即抢购"
               android:textSize="15sp"
               android:gravity="center"
               android:textColor="@color/white"
               />

       </LinearLayout>

       <!--砍价-->
       <TextView
           android:id="@+id/tv_kanjia"
           android:layout_width="100dp"
           android:layout_height="40dp"
           android:layout_gravity="center_vertical"
           android:background="@drawable/light_blue_btn_bg"
           android:layout_marginRight="15dp"
           android:visibility="gone"
           android:text="发起砍价"
           android:textColor="#ffffff"
           android:textSize="18sp"
           android:gravity="center"
           />


   </LinearLayout>


</LinearLayout>