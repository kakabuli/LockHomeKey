<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    >
    <com.yun.software.kaadas.UI.view.JudgeNestedScrollView
        android:id="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_order_statue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/light_blue"
                android:gravity="center"
                android:text="等待付款..."
                android:textColor="@color/white"
                android:textSize="21sp">
            </TextView>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/dk_color_F7"/>
            <include layout="@layout/address_item"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/dk_color_F7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/icon_order"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/app_name"
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"/>

            </LinearLayout>
            <View
                android:background="@color/color_e6"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <com.yun.software.kaadas.UI.view.OrderItemListView
                android:id="@+id/commiteItem_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </com.yun.software.kaadas.UI.view.OrderItemListView>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="15dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:text="商品金额"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:text="¥2299"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_coupon"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:text="优惠券"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_coupon"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_e6"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_height="50dp">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:text="实付款"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_333333"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_real_price"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:text="¥2999"
                    android:textSize="15sp"
                    android:textColor="@color/app_red"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/dk_color_F7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="95dp"
                        android:text="订单编号"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_order_no"
                        android:layout_width="0dp"
                        android:text="5564987978465"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="95dp"
                        android:text="下单时间"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_create_time"
                        android:layout_width="0dp"
                        android:text="2019-09-09 13：22：56"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_zhifu_type"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="95dp"
                        android:text="支付方式"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_paytype"
                        android:layout_width="0dp"
                        android:text="在线支付"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_zhifu_time"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="95dp"
                        android:text="付款时间"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_fukuan_time"
                        android:layout_width="0dp"
                        android:text="无"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="95dp"
                        android:text="期望安装时间"
                        android:textSize="15sp"
                        android:textColor="@color/dk_color_666666"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_anzhuang_time"
                        android:layout_width="0dp"
                        android:text="2019-09-09 13：22：56"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/default_bg_color"/>

            <View
                android:id="@+id/view_50"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/default_bg_color"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/default_bg_color"/>
        </LinearLayout>
    </com.yun.software.kaadas.UI.view.JudgeNestedScrollView>

    <LinearLayout
        android:id="@+id/lin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:background="@color/white"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_item_01"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_add_cart"
            android:text="申请售后"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/tv_item_02"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_buy_now"
            android:text="取消订单"
            android:layout_height="40dp"/>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/topConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <include
            layout="@layout/after_sale"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>


