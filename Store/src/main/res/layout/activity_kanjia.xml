<?xml version="1.0" encoding="utf-8"?>
<com.yun.software.kaadas.UI.view.JudgeNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/line_color"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="产品名称指纹锁"
            android:maxLines="2"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:textColor="#333333"
            />

        <LinearLayout
            android:id="@+id/ll_countdownview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            >

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/countdown_view"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isHideTimeBackground="false"
                app:isConvertDaysToHours="true"
                app:isShowDay="false"
                app:isShowHour="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:timeTextColor="#ffffff"
                app:timeTextSize="12sp"
                app:isTimeTextBold="true"
                app:suffixGravity="center"
                app:suffixTextColor="#333333"
                app:suffixTextSize="12sp"
                app:suffixDay=":"
                app:suffixHour=":"
                app:suffixMinute=":"
                app:timeBgColor="#333333"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后砍价过期"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="¥2999"
                android:textSize="12sp"
                android:textColor="#ca2128"

                />

            <TextView
                android:id="@+id/price_desc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="已砍252.1元，还差776.4元"
                android:textSize="12sp"
                android:textColor="#666666"

                />

        </LinearLayout>


        <Button
            android:id="@+id/btn_share"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="喊好友砍一刀"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@drawable/light_blue_btn_bg"
            android:layout_margin="15dp"
            />

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="立即购买"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:background="@drawable/delete_blue_btn_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />


        <LinearLayout
            android:id="@+id/ll_help"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="砍价帮"
                android:textSize="18sp"
                android:textColor="#333333"
                android:gravity="center"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_bg_color"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_list_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_bg_color"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>


            <RelativeLayout
                android:id="@+id/rl_shouqi"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tv_open_view"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="收起"
                    android:textColor="#666666"
                    android:layout_centerInParent="true"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:drawablePadding="2dp"
                    android:drawableRight="@drawable/icon_spread"
                    />

            </RelativeLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/default_bg_color"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/pic_title_mine"
                android:layout_toRightOf="@+id/tv_tuijian"
                />

            <TextView
                android:id="@+id/tv_tuijian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:layout_centerInParent="true"
                android:textColor="#333333"
                android:text="推荐产品"

                />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="11dp"
                android:layout_marginRight="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/pic_title_mine"
                android:layout_toLeftOf="@+id/tv_tuijian"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/default_bg_color"/>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:srlAccentColor="@color/refresh_color"
            app:srlEnablePreviewInEditMode="true"
            app:srlPrimaryColor="@color/default_bg_color">
            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlClassicsSpinnerStyle="Scale"
                app:srlDrawableArrowSize="20dp"
                app:srlDrawableMarginRight="20dp"
                app:srlDrawableProgress="@drawable/ic_progress_puzzle_white"
                app:srlDrawableProgressSize="20dp"
                app:srlDisableContentWhenRefresh="true"
                app:srlEnableLastTime="true"
                app:srlFinishDuration="500"
                app:srlTextSizeTime="10dp"
                app:srlTextSizeTitle="16sp"
                app:srlTextTimeMarginTop="2dp"/>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="5dp"
                android:id="@+id/rv_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/default_bg_color"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:fadingEdge="none"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>



        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>



</com.yun.software.kaadas.UI.view.JudgeNestedScrollView>