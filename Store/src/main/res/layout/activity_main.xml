<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:t1="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_above="@+id/CommonTab"
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/CommonTab"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        t1:tl_iconHeight="20dp"
        t1:tl_textSelectColor="#333333"
        t1:tl_textUnselectColor="#9e9e9e"
        t1:tl_indicator_height="0dp"
        t1:tl_textsize="12sp"
        t1:tl_underline_color="#ececec"
        t1:tl_underline_gravity="TOP"
        t1:tl_underline_height="1dp"/>

</RelativeLayout>
