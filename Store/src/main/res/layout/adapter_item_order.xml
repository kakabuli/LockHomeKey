<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/lin_item"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/icon_order"/>

            <TextView
                android:id="@+id/tv_order_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="201802051245"
                android:textColor="#666666"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_order_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"
                android:visibility="visible"
                android:text=""
                android:textColor="@color/app_red"
                android:textSize="12sp"/>

        </LinearLayout>


    <View
        style="@style/line_horizen"/>

    <com.yun.software.kaadas.UI.view.OrderItemListView
        android:id="@+id/commiteItem_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </com.yun.software.kaadas.UI.view.OrderItemListView>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/clbom"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_total"
            app:layout_constraintRight_toLeftOf="@+id/tv_money"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="共1件商品 需付款："
            android:textColor="@color/color_333333"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/tv_money"
            app:layout_constraintBottom_toBottomOf="@+id/tv_total"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:text="¥2999"
            android:layout_height="wrap_content"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:paddingRight="15dp"
        android:gravity="right"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_order_delete"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:text="删除订单"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/light_blue"
            android:background="@drawable/delete_blue_btn_bg"
            android:layout_height="33dp"/>
        <TextView
            android:id="@+id/tv_order_cancel"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:text="取消订单"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/light_blue"
            android:background="@drawable/delete_blue_btn_bg"
            android:layout_height="33dp"/>
        <TextView
            android:id="@+id/tv_order_return"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="退货"
            android:gravity="center"
            android:textColor="@color/light_blue"
            android:background="@drawable/delete_blue_btn_bg"
            android:layout_height="33dp"/>
        <TextView
            android:id="@+id/tv_order_shouhou"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="申请售后"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/light_blue_btn_bg"
            android:layout_height="33dp"/>
        <Button
            android:id="@+id/tv_order_comment"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:text="评价"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/light_blue"
            android:background="@drawable/delete_blue_btn_bg"
            android:layout_height="33dp"/>

        <TextView
            android:id="@+id/tv_order_buy"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="再次购买"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/light_blue_btn_bg"
            android:layout_height="33dp"/>
        <TextView
            android:id="@+id/tv_order_yuyue"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:text="预约安装"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/dk_color_FFFFFF"
            android:background="@drawable/light_blue_btn_bg"
            android:layout_height="33dp"/>
        <TextView
            android:id="@+id/tv_order_pay"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:text="立刻支付"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center"
            android:textColor="@color/dk_color_FFFFFF"
            android:background="@drawable/light_blue_btn_bg"
            android:layout_height="33dp"/>

        <TextView
            android:id="@+id/tv_order_tuikuan"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:text="申请退款"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/light_blue"
            android:background="@drawable/delete_blue_btn_bg"
            android:layout_height="33dp"/>
        <TextView
            android:id="@+id/tv_order_install"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:text="确认安装"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/dk_color_FFFFFF"
            android:background="@drawable/light_blue_btn_bg"
            android:layout_height="33dp"/>
        <TextView
            android:id="@+id/tv_status"
            android:visibility="gone"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:text=""
            android:gravity="center"
            android:textColor="@color/dk_color_FFFFFF"
            android:background="@drawable/light_blue_btn_bg"
            android:layout_height="33dp"/>


    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:background="@color/dk_color_F7"
        android:layout_height="10dp"/>



</LinearLayout>