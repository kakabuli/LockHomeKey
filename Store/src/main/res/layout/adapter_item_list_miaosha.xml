<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">


    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="25dp"
            android:text="产品名称拼团"
            android:layout_marginRight="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="160dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_stopwatch"
            />

        <TextView
            android:id="@+id/tv_xianshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="限时"
            android:textColor="@color/color_333333"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            />

        <cn.iwgang.countdownview.CountdownView
            android:id="@+id/countdown_view"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:isHideTimeBackground="false"
            app:isConvertDaysToHours="true"
            app:isShowDay="false"
            app:isShowHour="true"
            app:isShowMinute="true"
            app:isShowSecond="true"
            app:timeTextColor="#ffffff"
            app:timeTextSize="12sp"
            app:isTimeTextBold="true"
            app:suffixGravity="center"
            app:suffixTextColor="@color/color_333333"
            app:suffixTextSize="12sp"
            app:suffixDay=":"
            app:suffixHour=":"
            app:suffixMinute=":"
            app:timeBgColor="@color/color_333333"

            />


        <TextView
            android:id="@+id/tv_over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="活动已结束"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"
            android:textColor="#999999"
            />


    </LinearLayout>






    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="15dp"
        android:text="立即抢购"
        android:textSize="12sp"
        android:background="@drawable/light_blue_btn_bg"
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/white"
        />

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#ca2128"
            android:textSize="12sp"

            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2099"
            android:layout_marginLeft="3dp"
            android:textColor="#ca2128"
            android:textSize="18sp"

            />
        <TextView
            android:id="@+id/tv_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥9999"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>