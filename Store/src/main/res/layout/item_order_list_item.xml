<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="15dp"
              android:paddingRight="15dp"
              android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_333333"
                android:maxLines="2"
                android:text="凯迪仕K7指纹锁家用防盗门电子锁云智能锁门锁磁卡锁密码锁"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_attr"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/dk_color_999999"
                android:maxLines="2"
                android:text="磁卡锁 感应锁 密码锁 IC卡锁"
                android:ellipsize="end"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"
                    android:text="¥2299"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/tv_count"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/gray"
                    android:text="x1"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_shouhou"
        android:layout_width="90dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="申请退款"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:textColor="@color/light_blue"
        android:background="@drawable/delete_blue_btn_bg"
        android:layout_height="33dp"/>

    <View
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        style="@style/line_horizen"/>


</LinearLayout>
