<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="产品评分"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dk_dp_15"/>

        <la.xiong.androidquick.ui.widget.StarBarView
            android:id="@+id/starbar_chanpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:space_width="10dp"
            app:star_height="18dp"
            app:star_hollow="@drawable/icon_star_judge_nor"
            app:star_isIndicator="false"
            app:star_max="5"
            app:star_orientation="horizontal"
            app:star_rating="5"
            app:star_solid="@drawable/icon_star_judge_sel"
            app:star_width="18dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e6"/>

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:background="@color/white"
        android:gravity="start"
        android:hint="请输入您的评论内容"
        android:padding="15dp"
        android:textColor="@color/color_333333"
        android:textSize="15sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rc_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:overScrollMode="never"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="45dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="商品符合度"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dk_dp_15"/>

        <la.xiong.androidquick.ui.widget.StarBarView
            android:id="@+id/starbar_shangpin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:space_width="10dp"
            app:star_height="18dp"
            app:star_hollow="@drawable/icon_star_judge_nor"
            app:star_isIndicator="false"
            app:star_max="5"
            app:star_orientation="horizontal"
            app:star_rating="5"
            app:star_solid="@drawable/icon_star_judge_sel"
            app:star_width="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="配送速度"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dk_dp_15"/>

        <la.xiong.androidquick.ui.widget.StarBarView
            android:id="@+id/starbar_peisong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:space_width="10dp"
            app:star_height="18dp"
            app:star_hollow="@drawable/icon_star_judge_nor"
            app:star_isIndicator="false"
            app:star_max="5"
            app:star_orientation="horizontal"
            app:star_rating="5"
            app:star_solid="@drawable/icon_star_judge_sel"
            app:star_width="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="安装满意度"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dk_dp_15"/>

        <la.xiong.androidquick.ui.widget.StarBarView
            android:id="@+id/starbar_anzhuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:space_width="10dp"
            app:star_height="18dp"
            app:star_hollow="@drawable/icon_star_judge_nor"
            app:star_isIndicator="false"
            app:star_max="5"
            app:star_orientation="horizontal"
            app:star_rating="5"
            app:star_solid="@drawable/icon_star_judge_sel"
            app:star_width="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:checked="false"
            android:theme="@style/My_CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匿名评论"
            android:textColor="@color/color_333333"
            android:textSize="15sp"/>
    </LinearLayout>


</LinearLayout>