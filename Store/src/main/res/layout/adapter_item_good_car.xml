<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="130dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="90dp">
            <RelativeLayout
                android:id="@+id/re_state"
                android:layout_width="wrap_content"
                android:padding="15dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_select_state"
                    android:layout_width="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/selectbox_nor"
                    android:layout_height="15dp"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:scaleType="fitCenter"
                android:layout_height="90dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"
                    android:maxLines="1"
                    android:text="凯迪仕K7指纹锁家用防盗门电子锁云智能锁门锁磁卡锁密码锁"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_attr"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/dk_color_999999"
                    android:maxLines="2"
                    android:text="磁卡锁 感应锁 密码锁 IC卡锁"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/color_333333"
                        />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/color_333333"
                        android:text="2299"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                    <LinearLayout
                        android:layout_marginBottom="6dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="126dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:background="@drawable/icon_trolley_number_3x"
                        android:layout_height="30dp">
                        <ImageView
                            android:id="@+id/v_plus"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/et_total"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="50dp"
                            android:gravity="center"
                            android:enabled="false"
                            android:background="@color/transparent"
                            android:text="1"
                            android:inputType="number"
                            android:textColor="@color/color_333333"
                            android:textSize="15sp"
                            android:layout_height="30dp"/>
                        <ImageView
                            android:id="@+id/v_add"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>