<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_bg_color"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_more_miaosha"
        android:layout_width="match_parent"
        android:background="@color/default_bg_color"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_categroy_name_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="限时秒杀"
            android:textStyle="bold"

            android:textSize="21sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_home_more_big"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/miaosha_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="340dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:background="@drawable/icon_stopwatch"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_xianshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限时"
                android:textSize="12sp"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                />


            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/countdown_view"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isHideTimeBackground="false"
                app:isConvertDaysToHours="true"
                app:isShowDay="false"
                app:isShowHour="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:timeTextColor="#ffffff"
                app:timeTextSize="12sp"
                app:isTimeTextBold="true"
                app:suffixGravity="center"
                app:suffixTextColor="@color/color_333333"
                app:suffixTextSize="12sp"
                app:suffixDay=":"
                app:suffixHour=":"
                app:suffixMinute=":"
                app:timeBgColor="@color/color_333333"

                 />

            <TextView
                android:id="@+id/tv_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="活动已结束"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:textColor="#999999"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/miaosha_end"
            android:layout_width="45dp"
            android:layout_height="38dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/pic_close_home"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/miaosha_image"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"
            />

        <TextView
            android:id="@+id/miaosha_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:text="产品名称指纹锁"
            android:singleLine="true"
            android:gravity="center"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="20sp"
            android:textColor="#333333"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="12sp"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/miaosha_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1999"
                android:layout_marginLeft="3dp"
                android:textSize="15sp"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/miaosha_old_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥1999"
                android:layout_marginLeft="13dp"
                android:textSize="15sp"
                android:textColor="#999999"
                />

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recycler_miaosha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_bg_color"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>
