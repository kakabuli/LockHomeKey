<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_bg_color"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_more_zhongchou"
        android:layout_width="match_parent"
        android:background="@color/default_bg_color"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_categroy_name_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="今日众筹"
            android:textStyle="bold"
            android:textSize="21sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_home_more_big"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/zhongchou_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="260dp">

        <ImageView
            android:id="@+id/zhongchou_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="56dp"
            >
            <TextView
                android:id="@+id/zhongchou_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="165dp"
                android:text="产品名称众筹产品名称众筹产品名称众筹"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#333333"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="88dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="12sp"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/zhongchou_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1999"
                android:layout_marginLeft="3dp"
                android:textSize="15sp"
                android:textColor="#333333"
                />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="130dp"
            android:text="立即查看"
            android:textSize="12sp"
            android:textColor="#333333"
            />


        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/icon_home_more_big"
            android:layout_marginTop="132dp"
            android:layout_marginLeft="72dp"
            />


        <TextView
            android:id="@+id/tv_zhichi_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="44dp"
            android:text="40"
            android:textSize="12sp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/tv_zhichi_count"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="44dp"
            android:text="人支持"
            android:textSize="12sp"
            android:textColor="#999999"
            />


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:progress="50"
            android:progressDrawable="@drawable/zhongchou_progress"
            android:orientation="horizontal"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            />

        <TextView
            android:id="@+id/zhongchou_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="44dp"
            android:text="20%"
            android:textSize="12sp"
            android:textColor="#333333"
            />


    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recycler_zhongchou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_bg_color"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>
