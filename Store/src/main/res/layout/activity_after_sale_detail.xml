<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"

    >
    <com.yun.software.kaadas.UI.view.JudgeNestedScrollView
        android:id="@+id/scrollView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:overScrollMode="never"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="50dp">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_sale_after_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_blue"
                    android:gravity="center"
                    android:text="售后处理中..."
                    android:textColor="@color/white"
                    android:textSize="21sp">
                </TextView>
                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/re_sale_after_complete"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:background="@color/color_999"
                    android:layout_height="match_parent">
                   <TextView
                       android:layout_width="wrap_content"
                       android:text="售后已处理"
                       android:layout_marginLeft="13dp"
                       android:textColor="#ffffffff"
                       android:textSize="21sp"
                       android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sale_after_complete_time"
                        android:layout_marginRight="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="2019-03-04 10:30:24"
                        android:textColor="#ffffffff"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/dk_color_F7"/>
            <com.yun.software.kaadas.UI.view.OrderItemListView2
                android:id="@+id/commiteItem_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </com.yun.software.kaadas.UI.view.OrderItemListView2>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="@color/dk_color_F7"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <TextView

                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:text="申请时间"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sale_after_apply_time"
                        android:layout_marginLeft="100dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:text="2019-09-09 13：22：56"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dk_color_F7"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:text="售后原因"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sale_after_apply_type"
                        android:layout_marginLeft="100dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:textSize="15sp"
                        android:text="aaaa"
                        android:textColor="#666666"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"/>
                <RelativeLayout
                    android:id="@+id/rl_lianxiren"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:text="联系人"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sale_after_apply_people"
                        android:layout_marginLeft="100dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:text="大吉"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"/>
                <RelativeLayout
                    android:id="@+id/rl_tell"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:text="联系电话"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sale_after_apply_phone"
                        android:layout_marginLeft="100dp"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:text="18631652355"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:textSize="15sp"
                    android:textColor="@color/color_333333"
                    android:text="问题描述"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/dk_color_F7"
                    android:layout_margin="12sp"
                    android:layout_height="200dp">
                    <TextView
                        android:id="@+id/tv_my_feed"
                        android:layout_width="match_parent"
                        android:padding="@dimen/dp_10"
                        android:textColor="#999999"
                        android:gravity="top|left"
                        android:background="@color/transparent"
                        android:textSize="15dp"
                        android:maxLength="200"
                        android:layout_height="match_parent"/>
                    <android.support.v7.widget.RecyclerView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/rc_imgs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:fadingEdge="none"
                        android:overScrollMode="never"
                        />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lin_feee_result"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="13dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="120dp"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="处理意见"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sale_after_apply_feed"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#999999"
                        android:textSize="15sp"
                        android:background="@color/transparent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="13dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="120dp"
                        android:textColor="#333333"
                        android:textSize="15sp"
                        android:text="处理时间"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_sale_after_handle_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="#999999"
                        android:text="2019-03-03 10:00:09"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </com.yun.software.kaadas.UI.view.JudgeNestedScrollView>

</android.support.constraint.ConstraintLayout>


