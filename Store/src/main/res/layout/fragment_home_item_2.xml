<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_lingdong"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/default_bg_color"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_more_lingdong"
        android:layout_width="match_parent"
        android:background="@color/default_bg_color"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/tv_categroy_name_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:text="灵动系列"
            android:textSize="21sp"
            android:textStyle="bold"
            android:maxLength="10"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/icon_home_more_big"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lingdong_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="340dp">

        <ImageView
            android:id="@+id/lingdong_image"
            android:layout_width="190dp"
            android:layout_height="190dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:id="@+id/lingdong_name"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="75dp"
            android:text="产品名称指纹锁"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#333333"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="45dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="12sp"
                android:textColor="#333333"
                />

            <TextView
                android:id="@+id/lingdong_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1999"
                android:layout_marginLeft="3dp"
                android:textSize="15sp"
                android:textColor="#333333"
                />

        </LinearLayout>



    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/recycler_lingdong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_bg_color"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"/>

</LinearLayout>
