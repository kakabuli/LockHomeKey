<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="150dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="15dp"
            android:text="苹果笔记本，mackbook..."
            android:textColor="#333333"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textSize="12sp"
                android:text="已砍价"
                android:textColor="#666666"
                />
            <TextView
                android:id="@+id/tv_cut_price"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="134.5"
                android:textColor="#ca2128"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="元"
                android:textColor="#666666"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_countdownview"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <cn.iwgang.countdownview.CountdownView
                android:id="@+id/countdown_view"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:isHideTimeBackground="false"
                app:isConvertDaysToHours="true"
                app:isShowDay="false"
                app:isShowHour="true"
                app:isShowMinute="true"
                app:isShowSecond="true"
                app:timeTextColor="#ffffff"
                app:timeTextSize="12sp"
                app:isTimeTextBold="true"
                app:suffixGravity="center"
                app:suffixTextColor="#333333"
                app:suffixTextSize="12sp"
                app:suffixDay=":"
                app:suffixHour=":"
                app:suffixMinute=":"
                app:timeBgColor="#333333"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后结束"
                android:textColor="#333333"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_kanjia_over"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="砍价结束"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_kanjia_success"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:text="砍价成功"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="#ca2128"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_kanjia"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="30dp"
            android:text="继续砍价"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="#ca2128"
            />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line_color"
        />
</android.support.constraint.ConstraintLayout>