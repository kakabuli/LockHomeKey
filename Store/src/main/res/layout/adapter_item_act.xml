<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/img_default_chang"
            />

        <TextView
            android:id="@+id/tv_statue_red"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#CA2128"
            android:text=""
            android:textSize="15sp"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />

        <TextView
            android:id="@+id/tv_statue_gray"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:background="#999999"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            />



    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="活动主题活动主题活动主题活动主题活动主题主题活动主题"
        android:textColor="#333333"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/icon_date_activity_black"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="07-24 18:00 - 08-24 18:00"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon_people"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/icon_people_activity_black"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="80"
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:background="@drawable/icon_address_activity_black"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="07-24 18:00 - 08-24 18:00"
            android:textSize="12sp"
            android:textColor="#333333"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>



</LinearLayout>